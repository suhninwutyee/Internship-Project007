@model ProjectManagementSystem.Models.ProjectMember

@{
    ViewData["Title"] = "Confirm Remove";
}

<div>
    <partial name="_ProgressBarPartial" />
</div>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header text-white rounded-top-4" style="background-color: #8c5dd1;">
                    <h4 class="mb-0">🗑️ Confirm Remove</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning fw-semibold fs-5 mb-4">
                        Are you sure you want to remove the following project member?
                    </div>

                    <div class="mb-3">
                        <p>
                            <strong>Student:</strong>
                            <span class="text-dark">@Model.Student?.StudentName</span>
                        </p>
                        <p>
                            <strong>Project:</strong>
                            <span class="text-dark">@Model.Project?.ProjectName</span>
                        </p>
                        <p>
                            <strong>Role:</strong>
                            <span class="text-dark">@Model.Role</span>
                        </p>
                    </div>

                    <form asp-action="Remove" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProjectMember_pkId" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn text-white fw-semibold px-4 py-2" style="background-color: #8c5dd1;">
                                <i class="bi bi-trash3 me-1"></i> Yes, Remove
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
