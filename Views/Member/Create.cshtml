@model ProjectManagementSystem.Models.ProjectMember

@{
    ViewData["Title"] = "Add Project Member";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4" style="background-color: #ffffff;">
                <div class="card-header text-white rounded-top-4" style="background-color: #8c5dd1;">
                    <h4 class="mb-0">Add Project Member</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Create" method="post">
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold text-dark"></label>
                            <select asp-for="Role" class="form-select" style="background-color: #e4eefd; border-radius: 10px;">
                                <option value="">-- Select Role --</option>
                                <option value="Leader">Leader</option>
                                <option value="Collaborator">Collaborator</option>
                                <option value="Researcher">Researcher</option>
                                <option value="Designer">Designer</option>
                                <option value="Developer">Developer</option>
                                <option value="Tester">Tester</option>
                                <option value="Presenter">Presenter</option>
                                <option value="Documenter">Documenter</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>


                        <div class="mb-3">
                            <label class="form-label fw-semibold text-dark">Student</label>
                            <select asp-for="Student_pkId" asp-items="ViewBag.Students" class="form-select">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="Student_pkId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold text-dark">Project</label>
                            <select asp-for="Project_pkId" asp-items="ViewBag.Projects" class="form-select">
                                <option value="">-- Select Project --</option>
                            </select>
                            <span asp-validation-for="Project_pkId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn text-white px-4" style="background-color: #8c5dd1;">
                                <i class="bi bi-plus-circle me-1"></i> Add Member
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
