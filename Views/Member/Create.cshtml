@model ProjectManagementSystem.Models.ProjectMember

@{
    ViewData["Title"] = "Add Project Member";
    Layout = "_Layout";
}
<body>
<div class="min-vh-100 bg-light-purple">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Progress Bar -->
                <div class="mb-4">
                    <partial name="_ProgressBarPartial" />
                </div>

                <!-- Card -->
                <div class="card border-0 shadow-lg rounded-3 overflow-hidden">
                    <!-- Card Header -->
                    <div class="card-header bg-gradient-purple py-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-white bg-opacity-10 p-2 rounded-circle me-3">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="white" viewBox="0 0 16 16">
                                    <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H7Zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm-5.784 6A2.238 2.238 0 0 1 5 13c0-1.355.68-2.75 1.936-3.72A6.325 6.325 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1h4.216ZM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                                </svg>
                            </div>
                            <h2 class="mb-0 text-white fw-bold">Add Project Member</h2>
                        </div>
                    </div>

                    <!-- Card Body -->
                    <div class="card-body p-5">
                        <form asp-action="Create" method="post" class="needs-validation" novalidate>
                            <!-- Role Field -->
                            <div class="mb-4">
                                <label asp-for="Role" class="form-label fw-semibold text-muted mb-2">Role</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light-purple-10 border-end-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8c5dd1" viewBox="0 0 16 16">
                                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                                        </svg>
                                    </span>
                                    <select asp-for="Role" class="form-select border-start-0 ps-3" style="height: 50px;" required>
                                        <option value="" selected disabled>Select Member Role</option>
                                        <option value="Leader">Leader</option>
                                        <option value="Member">Member</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Role" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Student Field -->
                            <div class="mb-4">
                                <label asp-for="Student_pkId" class="form-label fw-semibold text-muted mb-2">Student</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light-purple-10 border-end-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8c5dd1" viewBox="0 0 16 16">
                                            <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z" />
                                        </svg>
                                    </span>
                                    <select asp-for="Student_pkId" asp-items="ViewBag.Students" class="form-select border-start-0 ps-3" style="height: 50px;" required>
                                        <option value="" selected disabled>Select Student</option>
                                    </select>
                                    <a asp-controller="Student" asp-action="Create" class="btn btn-outline-purple d-flex align-items-center" title="Add New Student">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8c5dd1" viewBox="0 0 16 16">
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                        </svg>
                                    </a>
                                </div>
                                <span asp-validation-for="Student_pkId" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Project Field -->
                            <div class="mb-4">
                                <label asp-for="Project_pkId" class="form-label fw-semibold text-muted mb-2">Project</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light-purple-10 border-end-0">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8c5dd1" viewBox="0 0 16 16">
                                            <path d="M1.5 0A1.5 1.5 0 0 0 0 1.5V13a1 1 0 0 0 1 1V1.5a.5.5 0 0 1 .5-.5H14a1 1 0 0 0-1-1H1.5z" />
                                            <path d="M3.5 2A1.5 1.5 0 0 0 2 3.5v11A1.5 1.5 0 0 0 3.5 16h6.086a1.5 1.5 0 0 0 1.06-.44l4.915-4.914A1.5 1.5 0 0 0 16 9.586V3.5A1.5 1.5 0 0 0 14.5 2h-11zM3 3.5a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 .5.5V9h-4.5A1.5 1.5 0 0 0 9 10.5V15H3.5a.5.5 0 0 1-.5-.5v-11zm7 11.293V10.5a.5.5 0 0 1 .5-.5h4.293L10 14.793z" />
                                        </svg>
                                    </span>
                                    <select asp-for="Project_pkId" asp-items="ViewBag.Projects" class="form-select border-start-0 ps-3" style="height: 50px;" required>
                                        <option value="" selected disabled>Select Project</option>
                                    </select>
                                    <a asp-controller="Project" asp-action="Create" class="btn btn-outline-purple d-flex align-items-center" title="Add New Project">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="#8c5dd1" viewBox="0 0 16 16">
                                            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                        </svg>
                                    </a>
                                </div>
                                <span asp-validation-for="Project_pkId" class="text-danger small mt-1"></span>
                            </div>

                            <!-- Form Actions -->
                            <div class="d-flex justify-content-between mt-5 pt-2">
                                <a asp-action="Index" class="btn btn-lg btn-outline-secondary rounded-pill px-4">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                                        <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z" />
                                    </svg>
                                    Cancel
                                </a>
                                <button type="submit" class="btn btn-lg bg-gradient-purple text-white rounded-pill px-4 shadow-sm">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="me-1">
                                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                                    </svg>
                                    Add Member
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
@section Styles {
    <style>
        .bg-light-purple {
            background-color: #f8f5ff;
        }

        .bg-light-purple-10 {
            background-color: rgba(140, 93, 209, 0.1);
        }

        .bg-gradient-purple {
            background: linear-gradient(135deg, #8c5dd1 0%, #6a3cb5 100%);
        }

        .btn-outline-purple {
            border-color: #8c5dd1;
            color: #8c5dd1;
        }

            .btn-outline-purple:hover {
                background-color: #8c5dd1;
                color: white;
            }

        .card {
            border: none;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(140, 93, 209, 0.1);
            }

        .form-control, .form-select {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #e0e0e0;
        }

            .form-control:focus, .form-select:focus {
                border-color: #8c5dd1;
                box-shadow: 0 0 0 0.25rem rgba(140, 93, 209, 0.25);
            }

        .input-group-text {
            border-radius: 8px 0 0 8px;
            background-color: rgba(140, 93, 209, 0.05);
            border-right: none;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Example of adding custom validation feedback
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()
    </script>
}