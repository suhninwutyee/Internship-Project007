@model ProjectManagementSystem.Models.ProjectMember

@{
    ViewData["Title"] = "Edit Project Member";
}

<h1>Edit Project Member</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProjectMember_pkId" />

    <div class="form-group mb-3">
        <label asp-for="Role"></label>
        <input asp-for="Role" class="form-control" />
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Student</label>
        <select asp-for="Student_pkId" class="form-control" asp-items="@(new SelectList(ViewData["Students"] as List<ProjectManagementSystem.Models.Student>, "Student_pkId", "Name", Model.Student_pkId))">
            <option value="">-- Select Student --</option>
        </select>
        <span asp-validation-for="Student_pkId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Project</label>
        <select asp-for="Project_pkId" class="form-control" asp-items="@(new SelectList(ViewData["Projects"] as List<ProjectManagementSystem.Models.Project>, "Project_pkId", "Title", Model.Project_pkId))">
            <option value="">-- Select Project --</option>
        </select>
        <span asp-validation-for="Project_pkId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
