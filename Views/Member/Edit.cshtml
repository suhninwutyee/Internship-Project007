@model ProjectManagementSystem.Models.ProjectMember

@{
    ViewData["Title"] = "Edit Project Member";
}

<div>
    <partial name="_ProgressBarPartial" />
</div>

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header text-white rounded-top-4" style="background-color: #8c5dd1;">
                    <h4 class="mb-0">✏️ Edit Project Member</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.ProjectMember_pkId)

                        <div class="mb-3">
                            <label asp-for="Role" class="form-label fw-semibold text-dark">Role</label>
                            <select asp-for="Role" class="form-select" style="background-color: #e4eefd; border-radius: 10px;">
                                <option value="">-- Select Role --</option>
                                <option value="Leader">Leader</option>
                                <option value="Member">Member</option>
                            </select>
                            <span asp-validation-for="Role" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Student_pkId" class="form-label fw-semibold text-dark">Student</label>
                            <select asp-for="Student_pkId" asp-items="ViewBag.Students" class="form-select" style="background-color: #e4eefd; border-radius: 10px;">
                                <option value="">-- Select Student --</option>
                            </select>
                            <span asp-validation-for="Student_pkId" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Project_pkId" class="form-label fw-semibold text-dark">Project</label>
                            <select asp-for="Project_pkId" asp-items="ViewBag.Projects" class="form-select" style="background-color: #e4eefd; border-radius: 10px;">
                                <option value="">-- Select Project --</option>
                            </select>
                            <span asp-validation-for="Project_pkId" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn text-white fw-semibold px-4" style="background-color: #8c5dd1;">
                                <i class="bi bi-save me-1"></i> Update Member
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
