@model ProjectManagementSystem.DBModels.Language

@{
    ViewData["Title"] = "Language Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    body {
        background: linear-gradient(135deg, #e4eefd);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
</style>
<div class="container mt-4" style="max-width: 600px;">
    <h3 class="mb-4">📄 Language Details</h3>

    <div class="card shadow-sm p-4 rounded bg-white">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.LanguagePkId</dd>

            <dt class="col-sm-3">Language Name</dt>
            <dd class="col-sm-9">@Model.LanguageName</dd>

            <dt class="col-sm-3">Project Type</dt>
            <dd class="col-sm-9">@Model.ProjectTypePk?.TypeName</dd>
        </dl>
    </div>

    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.LanguagePkId" class="btn btn-warning me-2">✏️ Edit</a>
        <a asp-action="Index" class="btn btn-secondary">🔙 Back</a>
    </div>
</div>
