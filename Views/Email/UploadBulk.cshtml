@model ProjectManagementSystem.Models.Email
@{
    ViewData["Title"] = "Upload Student Emails";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h3 class="card-title mb-0 text-center fw-bold">Bulk Upload Student Emails</h3>
                </div>
                <div class="card-body p-5">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success mb-4 rounded-2">@TempData["Success"]</div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger mb-4 rounded-2">@TempData["Error"]</div>
                    }

                    <form asp-action="UploadBulk" method="post" enctype="multipart/form-data" class="mb-4">
                        <div class="mb-4">
                            <label for="file" class="form-label fw-semibold text-purple mb-2">CSV File</label>
                            <input type="file" name="file" id="file" class="form-control input-field w-100" required />
                            <small class="text-muted mt-1 d-block">File must contain: EmailAddress, RollNumber columns</small>
                        </div>

                        <div class="mb-4">
                            <label asp-for="AcademicYear" class="form-label fw-semibold text-purple mb-2">Academic Year</label>
                            <select asp-for="AcademicYear" class="form-select input-field w-100" asp-items="new SelectList(ViewBag.AcademicYears)" required>
                                <option value="">-- Select Academic Year --</option>
                            </select>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-5">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold">
                                <i class="fas fa-upload me-2"></i>Upload
                            </button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4 py-2 fw-semibold">
                                <i class="fas fa-list me-2"></i>Back to List
                            </a>
                        </div>
                    </form>

                    <div class="border-top pt-4 mt-4">
                        <h5 class="text-purple fw-semibold mb-3">Required Format:</h5>
                        <div class="bg-light p-3 rounded-2 mb-3">
                            <code class="d-block p-2">EmailAddress,RollNumber<br />student1@example.com,1001<br />student2@example.com,1002</code>
                        </div>
                        <a href="#" class="btn btn-sm btn-outline-purple">
                            <i class="fas fa-download me-1"></i>Download Template
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .text-purple {
            color: #8C5DD1;
        }

        .btn-outline-purple {
            color: #8C5DD1;
            border-color: #8C5DD1;
        }

            .btn-outline-purple:hover {
                background-color: #8C5DD1;
                color: white;
            }

        .card {
            border-radius: 12px;
            overflow: hidden;
        }

        .input-field {
            background-color: #f8f9fa;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            padding: 10px 12px;
            transition: all 0.3s;
        }

            .input-field:focus {
                border-color: #8C5DD1;
                box-shadow: 0 0 0 3px rgba(140, 93, 209, 0.15);
            }

        .btn-primary {
            background-color: #8C5DD1;
            border: none;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .btn-primary:hover {
                background-color: #7a4cb8;
                transform: translateY(-2px);
            }

        .btn-outline-primary {
            color: #8C5DD1;
            border: 2px solid #8C5DD1;
            border-radius: 8px;
            transition: all 0.3s;
        }

            .btn-outline-primary:hover {
                background-color: #8C5DD1;
                color: white;
                transform: translateY(-2px);
            }

        .alert {
            border-radius: 8px;
            padding: 12px 16px;
        }

        code {
            font-family: 'Courier New', monospace;
            background: rgba(140, 93, 209, 0.05);
            color: #8C5DD1;
            border-radius: 4px;
        }
    </style>
}