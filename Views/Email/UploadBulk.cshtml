@model ProjectManagementSystem.DBModels.Email
@{
    ViewData["Title"] = "Upload Student Emails";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-3">
                    <div class="d-flex align-items-center justify-content-between">
                        <a asp-action="Index" class="btn btn-sm btn-outline-light hover-scale">
                            <i class="fas fa-arrow-left me-1"></i>
                        </a>
                        <h3 class="h5 mb-0 text-center flex-grow-1">Bulk Upload Student Emails</h3>
                        <div style="width: 34px;"></div> <!-- Spacer for balance -->
                    </div>
                </div>
                
                <div class="card-body p-4 p-md-5">
                    <!-- Status Messages -->
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle me-3 fs-4"></i>
                                <div>@TempData["Success"]</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show mb-4 animate__animated animate__fadeIn">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle me-3 fs-4"></i>
                                <div>@TempData["Error"]</div>
                            </div>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <!-- Upload Form -->
                    <form asp-action="UploadBulk" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                        <!-- File Upload -->
                        <div class="mb-4">
                            <label class="form-label fw-semibold text-primary mb-2">
                                <i class="fas fa-file-csv me-2"></i>CSV File
                            </label>
                            <div class="file-upload-wrapper">
                                <input type="file" name="file" class="form-control form-control-lg" 
                                       id="csvUpload" required accept=".csv" />
                                <div class="file-upload-preview mt-2 d-none" id="filePreview">
                                    <div class="d-flex align-items-center bg-light rounded p-2">
                                        <i class="fas fa-file-alt text-primary me-3 fs-4"></i>
                                        <div>
                                            <div class="fw-medium" id="fileName"></div>
                                            <small class="text-muted" id="fileSize"></small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <small class="text-muted d-block mt-2">
                                Required format: <span class="fw-medium">Student Name, Email, Roll Number</span>
                            </small>
                            <a href="#" class="d-block mt-2 small text-primary" id="downloadTemplate">
                                <i class="fas fa-download me-1"></i> Download CSV template
                            </a>
                        </div>

                        <!-- Academic Year -->
                        <div class="form-group mb-4">
                            <label asp-for="AcademicYearPkId" class="form-label fw-semibold text-primary mb-2">
                                <i class="fas fa-calendar-alt me-2"></i>Academic Year
                            </label>
                            <div class="input-group">
                                <select asp-for="AcademicYearPkId" class="form-select form-select-lg"
                                        asp-items="@(new SelectList(ViewBag.AcademicYears, "AcademicYearPkId", "YearRange"))">
                                    <option value="">Select Academic Year</option>
                                </select>
                                <span class="input-group-text bg-primary text-white">
                                    <i class="fas fa-chevron-down"></i>
                                </span>
                            </div>
                            <span asp-validation-for="AcademicYearPkId" class="text-danger small mt-2 d-block"></span>
                        </div>

                        <!-- Hidden Field -->
                        <input type="hidden" asp-for="Class" value="Final Year" />

                        <!-- Submit Button -->
                        <div class="d-grid mt-4 pt-2">
                            <button type="submit" class="btn btn-primary btn-lg hover-scale shadow-sm" id="uploadButton">
                                <i class="fas fa-cloud-upload-alt me-2"></i> Upload CSV
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <style>
        /* Color Variables */
        :root {
            --primary: #8C5DD1;
            --primary-light: #E4EEFD;
            --primary-dark: #6a3093;
            --primary-extra-light: #f5f1fd;
            --danger: #ff4757;
            --light: #f8f9fa;
            --border: #e0e0e0;
            --text-muted: #6c757d;
        }

        /* Card Styling */
        .card {
            border: none;
            border-radius: 14px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

        .card-header {
            padding: 1.25rem 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.15);
        }

        .bg-gradient-primary {
            background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
        }

        /* Form Elements */
        .form-label {
            display: flex;
            align-items: center;
            font-size: 0.95rem;
            transition: all 0.3s ease;
        }

        .form-control, .form-select {
            border: 1px solid var(--border);
            border-radius: 10px !important;
            padding: 0.75rem 1.25rem;
            transition: all 0.3s ease;
            font-size: 1rem;
        }

        .form-control-lg, .form-select-lg {
            padding: 1rem 1.5rem;
        }

        .form-control:focus, .form-select:focus {
            border-color: var(--primary);
            box-shadow: 0 0 0 0.25rem rgba(140, 93, 209, 0.15);
            background-color: white;
        }

        .input-group-text {
            min-width: 50px;
            justify-content: center;
            border: none;
            background-color: var(--primary) !important;
            color: white !important;
        }

        /* File Upload */
        .file-upload-wrapper {
            position: relative;
        }

        .file-upload-preview {
            border: 1px dashed var(--border);
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        /* Buttons */
        .btn {
            border-radius: 10px;
            padding: 0.75rem 1.75rem;
            font-weight: 500;
            transition: all 0.3s ease;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .btn-lg {
            padding: 1rem 2rem;
            font-size: 1.05rem;
        }

        .btn-outline-light {
            border: 1px solid rgba(255, 255, 255, 0.3);
            color: white;
            background: transparent;
        }

        .btn-primary {
            background-color: var(--primary);
            box-shadow: 0 4px 12px rgba(140, 93, 209, 0.25);
        }

        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 16px rgba(140, 93, 209, 0.35);
        }

        .hover-scale {
            transition: transform 0.2s ease;
        }

        .hover-scale:hover {
            transform: scale(1.05);
        }

        /* Alerts */
        .alert {
            border-radius: 10px;
            padding: 1rem 1.5rem;
        }

        .alert-success {
            background-color: rgba(40, 167, 69, 0.1);
            border-color: rgba(40, 167, 69, 0.2);
            color: #28a745;
        }

        .alert-danger {
            background-color: rgba(220, 53, 69, 0.1);
            border-color: rgba(220, 53, 69, 0.2);
            color: #dc3545;
        }

        /* Responsive Adjustments */
        @@media (max-width: 768px) {
            .card-body {
                padding: 1.5rem;
            }
            
            .btn-lg {
                padding: 0.85rem 1.5rem;
            }
        }
    </style>
}

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // File upload preview
            const csvUpload = document.getElementById('csvUpload');
            const filePreview = document.getElementById('filePreview');
            const fileName = document.getElementById('fileName');
            const fileSize = document.getElementById('fileSize');
            
            csvUpload.addEventListener('change', function() {
                if (this.files.length > 0) {
                    const file = this.files[0];
                    fileName.textContent = file.name;
                    fileSize.textContent = formatFileSize(file.size);
                    filePreview.classList.remove('d-none');
                } else {
                    filePreview.classList.add('d-none');
                }
            });
            
            function formatFileSize(bytes) {
                if (bytes === 0) return '0 Bytes';
                const k = 1024;
                const sizes = ['Bytes', 'KB', 'MB', 'GB'];
                const i = Math.floor(Math.log(bytes) / Math.log(k));
                return parseFloat((bytes / Math.pow(k, i)).toFixed(2) + ' ' + sizes[i];
            }
            
            // Template download
            document.getElementById('downloadTemplate').addEventListener('click', function(e) {
                e.preventDefault();
                // In a real implementation, you would link to an actual template file
                alert('Downloading CSV template...');
                // window.location.href = '/templates/student-emails-template.csv';
            });
            
            // Form validation
            const form = document.querySelector('.needs-validation');
            form.addEventListener('submit', function(event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                    
                    // Add animation to invalid fields
                    const invalidFields = form.querySelectorAll(':invalid');
                    invalidFields.forEach(field => {
                        field.classList.add('animate__animated', 'animate__headShake');
                        setTimeout(() => {
                            field.classList.remove('animate__animated', 'animate__headShake');
                        }, 1000);
                    });
                }
                form.classList.add('was-validated');
            }, false);
            
            // Loading state for upload button
            const uploadButton = document.getElementById('uploadButton');
            form.addEventListener('submit', function() {
                if (form.checkValidity()) {
                    uploadButton.disabled = true;
                    uploadButton.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Uploading...';
                }
            });
        });
    </script>
}