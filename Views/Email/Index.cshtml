@model IEnumerable<ProjectManagementSystem.Models.Email>

@{
    ViewData["Title"] = "Email List";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h1>Email List</h1>

<form method="post" id="emailListForm">
    @Html.AntiForgeryToken()

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
        <a asp-action="UploadBulk" class="btn btn-success mb-3">📤 Upload Bulk Emails</a>

    </p>

    <table class="table">
        <thead>
            <tr>
                <th>Email Address</th>
                <th>Roll Number</th>
                <th>Class</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr id="row-@item.Email_PkId">
                    <td>
                        <span class="view-mode">@item.EmailAddress</span>
                        <input type="email" class="form-control edit-mode" name="EmailAddress"
                               value="@item.EmailAddress" style="display:none"
                               data-val="true" data-val-required="Email is required"
                               data-val-email="Invalid email format" />
                        <span class="text-danger field-validation-error" data-valmsg-for="EmailAddress"></span>
                    </td>
                    <td>
                        <span class="view-mode">@item.RollNumber</span>
                        <input type="text" class="form-control edit-mode" name="RollNumber"
                               value="@item.RollNumber" style="display:none"
                               data-val="true" data-val-required="Roll number is required" />
                        <span class="text-danger field-validation-error" data-valmsg-for="RollNumber"></span>
                    </td>
                    <td>
                        <span class="view-mode">@item.Class</span>
                        <input type="text" class="form-control edit-mode" name="Class"
                               value="@item.Class" style="display:none"
                               data-val="true" data-val-required="Class is required" />
                        <span class="text-danger field-validation-error" data-valmsg-for="Class"></span>
                    </td>
                    <td>@item.CreatedDate.ToString("g")</td>
                    <td>
                        <div class="view-mode">
                            <button type="button" class="btn btn-sm btn-warning edit-btn" data-id="@item.Email_PkId">Edit</button>
                            <button type="button" class="btn btn-sm btn-danger delete-btn" data-id="@item.Email_PkId">Delete</button>
                        </div>
                        <div class="edit-mode" style="display:none">
                            <button type="button" class="btn btn-sm btn-success save-btn" data-id="@item.Email_PkId">Save</button>
                            <button type="button" class="btn btn-sm btn-secondary cancel-btn" data-id="@item.Email_PkId">Cancel</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        $(document).ready(function () {
            $.validator.unobtrusive.parse("#emailListForm");

            $('.edit-btn').click(function () {
                var row = $(this).closest('tr');
                row.find('.view-mode').hide();
                row.find('.edit-mode').show();
            });

            $('.cancel-btn').click(function () {
                var row = $(this).closest('tr');
                row.find('.edit-mode').hide();
                row.find('.view-mode').show();
                row.find('.field-validation-error').text('');
            });

            $('.save-btn').click(function () {
                var row = $(this).closest('tr');
                var id = $(this).data('id');

                var isValid = true;
                row.find('input.edit-mode').each(function () {
                    if (!$(this).valid()) {
                        isValid = false;
                    }
                });

                if (!isValid) return;

                var formData = {
                    Email_PkId: id,
                    EmailAddress: row.find('[name="EmailAddress"]').val(),
                    RollNumber: row.find('[name="RollNumber"]').val(),
                    Class: row.find('[name="Class"]').val(),
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                };

                $.ajax({
                    url: '/Email/EditInline/' + id,
                    type: 'POST',
                    contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                    data: formData,
                    success: function (response) {
                        if (response && response.success) {
                            row.find('td').each(function () {
                                var span = $(this).find('.view-mode');
                                var input = $(this).find('input');
                                if (span.length && input.length) {
                                    var name = input.attr('name');
                                    span.text(formData[name]);
                                }
                            });
                            row.find('.edit-mode').hide();
                            row.find('.view-mode').show();
                            alert('Changes saved successfully.');
                        }
                    },
                    error: function (xhr) {
                        if (xhr.status === 400) {
                            var errors = xhr.responseJSON;
                            row.find('.field-validation-error').text('');
                            for (var field in errors) {
                                row.find('[data-valmsg-for="' + field + '"]').text(errors[field].join(', '));
                            }
                        } else {
                            alert('Error saving changes.');
                        }
                    }
                });
            });

            $('.delete-btn').click(function () {
                if (!confirm('Are you sure you want to delete this record?')) return;

                var id = $(this).data('id');
                var row = $('#row-' + id);

                $.ajax({
                    url: '/Email/DeleteInline/' + id,
                    type: 'POST',
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function (response) {
                        if (response.success) {
                            row.fadeOut(300, function () {
                                row.remove();
                            });
                            alert('Record deleted successfully.');
                        }
                    },
                    error: function () {
                        alert('Error deleting record.');
                    }
                });
            });
        });
    </script>
}
