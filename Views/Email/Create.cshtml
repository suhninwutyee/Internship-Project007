@model ProjectManagementSystem.Models.Email

@{
    ViewData["Title"] = "Create Email";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-4">
                    <h3 class="card-title mb-0 text-center fw-bold">Create Email</h3>
                </div>
                <div class="card-body p-5">
                    <form asp-action="Create" method="post" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-4"></div>

                        <div class="mb-4">
                            <label asp-for="EmailAddress" class="form-label fw-semibold text-purple mb-2 d-block">Email Address</label>
                            <input asp-for="EmailAddress" class="form-control input-field w-100" />
                            <span asp-validation-for="EmailAddress" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="RollNumber" class="form-label fw-semibold text-purple mb-2 d-block">Roll Number</label>
                            <input asp-for="RollNumber" class="form-control input-field w-100" />
                            <span asp-validation-for="RollNumber" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <input type="hidden" asp-for="Class" value="Final Year" />

                        <div class="mb-4">
                            <label asp-for="AcademicYear" class="form-label fw-semibold text-purple mb-2 d-block">Academic Year</label>
                            <select asp-for="AcademicYear" class="form-select input-field w-100" asp-items="new SelectList(ViewBag.AcademicYears)">
                                <option value="">-- Select Academic Year --</option>
                            </select>
                            <span asp-validation-for="AcademicYear" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-5 pt-2">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-semibold">
                                <i class="fas fa-save me-2"></i>Create
                            </button>
                            <a asp-action="Index" class="btn btn-outline-primary px-4 py-2 fw-semibold">
                                <i class="fas fa-list me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .text-purple {
            color: #8C5DD1;
        }

        .card {
            border-radius: 16px;
            overflow: hidden;
            border: none;
        }

        .card-header {
            border-bottom: none;
        }

        .input-field {
            background-color: #f8f9fa;
            border: 2px solid #e0e0e0;
            border-radius: 10px;
            padding: 12px 16px;
            transition: all 0.3s ease;
            font-size: 0.95rem;
        }

            .input-field:focus {
                border-color: #8C5DD1;
                box-shadow: 0 0 0 3px rgba(140, 93, 209, 0.15);
                outline: none;
                background-color: #fff;
            }

        .btn-primary {
            background-color: #8C5DD1;
            border: none;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            padding: 10px 24px;
        }

            .btn-primary:hover {
                background-color: #7a4cb8;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .btn-outline-primary {
            color: #8C5DD1;
            border: 2px solid #8C5DD1;
            font-weight: 600;
            border-radius: 10px;
            transition: all 0.3s ease;
            padding: 10px 24px;
            background-color: transparent;
        }

            .btn-outline-primary:hover {
                background-color: #8C5DD1;
                color: white;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            }

        .form-label {
            font-size: 0.95rem;
            letter-spacing: 0.2px;
        }

        .card-title {
            font-size: 1.5rem;
            letter-spacing: 0.5px;
        }
    </style>
}