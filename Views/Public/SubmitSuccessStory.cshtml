@model ProjectManagementSystem.Models.SuccessStory

@{
    ViewData["Title"] = "Submit Your Success Story";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Submit Your Success Story</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SubmitSuccessStory" method="post" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StudentName" class="form-label"></label>
                                <input asp-for="StudentName" class="form-control" />
                                <span asp-validation-for="StudentName" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="InternshipCompany" class="form-label"></label>
                                <input asp-for="InternshipCompany" class="form-control" />
                                <span asp-validation-for="InternshipCompany" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Story" class="form-label"></label>
                            <textarea asp-for="Story" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Story" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ImageFile" class="form-label"></label>
                            <input asp-for="ImageFile" type="file" class="form-control" />
                            <span asp-validation-for="ImageFile" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="AccessCode" class="form-label"></label>
                            <input asp-for="AccessCode" type="password" class="form-control" />
                            <span asp-validation-for="AccessCode" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary px-4">Submit</button>
                            <a asp-action="SuccessStories" class="btn btn-secondary">Back to Success Stories →</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
