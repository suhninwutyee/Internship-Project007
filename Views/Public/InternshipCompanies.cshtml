@model ProjectManagementSystem.ViewModels.CityListViewModel
@using Microsoft.AspNetCore.Mvc.Rendering

@{
    ViewData["Title"] = "Internship Companies by City";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<style>
    .small-dashboard-card {
        display: inline-flex;
        align-items: center;
        background: #fff;
        border-radius: 0.375rem;
        padding: 0.35rem 0.7rem;
        box-shadow: 0 0.125rem 0.25rem rgb(0 0 0 / 0.1);
        min-width: 140px;
        user-select: none;
        gap: 0.5rem;
        font-weight: 600;
        color: #dc3545;
        cursor: default;
    }

    .small-dashboard-icon {
        font-size: 1.4rem;
        opacity: 0.7;
        color: #dc3545;
        flex-shrink: 0;
    }

    .filter-select {
        max-width: 320px;
    }
</style>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0">@ViewData["Title"]</h2>

    <div class="small-dashboard-card" title="Total Cities">
        <i class="bi bi-geo-alt small-dashboard-icon"></i>
        <span>Total Cities: @Model.TotalCities</span>
    </div>
</div>

<!-- Filter Dropdown and Back Button -->
<div class="row mb-4 g-2 align-items-end">
    <div class="col-auto">
        <form method="get" asp-action="InternshipCompanies" class="d-flex align-items-end gap-2">
            <select name="selectedCityId" class="form-select filter-select" onchange="this.form.submit()" aria-label="Filter by State/Region">
                <option value="">-- Filter by State/Region --</option>
                @foreach (var city in Model.CityList)
                {
                    <option value="@city.Value" selected="@(city.Value == Model.SelectedCityId?.ToString() ? "selected" : null)">
                        @city.Text
                    </option>
                }
            </select>            
        </form>
    </div>
    <div class="col-auto">
        @if (Model.SelectedCityId.HasValue)
        {
            <a asp-action="InternshipCompanies" class="btn btn-outline-secondary">
                ← Back to Cities
            </a>
        }
    </div>
</div>

<!-- City Cards -->
@if (!Model.Cities.Any())
{
    <p class="text-muted">No cities found.</p>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var city in Model.Cities)
        {
            <div class="col">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(city.ImageFileName))
                    {
                        <img src="@Url.Content("~/images/cities/" + city.ImageFileName)"
                             class="card-img-top"
                             alt="@city.CityName"
                             style="height:180px; object-fit:cover;" />
                    }

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@city.CityName</h5>
                        <a asp-action="CompaniesByCity" asp-route-id="@city.City_pkId" class="btn btn-primary mt-auto">
                            Explore
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center mt-4">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="InternshipCompanies"
                       asp-route-selectedCityId="@Model.SelectedCityId"
                       asp-route-page="@(Model.CurrentPage - 1)">
                        Previous
                    </a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                        <a class="page-link"
                           asp-action="InternshipCompanies"
                           asp-route-selectedCityId="@Model.SelectedCityId"
                           asp-route-page="@i">@i</a>
                    </li>
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="InternshipCompanies"
                       asp-route-selectedCityId="@Model.SelectedCityId"
                       asp-route-page="@(Model.CurrentPage + 1)">
                        Next
                    </a>
                </li>
            </ul>
        </nav>
    }
}
