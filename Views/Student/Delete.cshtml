@model ProjectManagementSystem.DBModels.Student

@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg rounded-4 border-0">
                <div class="card-header text-white" style="background-color: #8c5dd1;">
                    <h4 class="mb-0">🗑️ Confirm Student Delete</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning fs-5">
                        Are you sure you want to delete this student?
                    </div>

                    <table class="table table-bordered">
                        <tr>
                            <th>Name</th>
@*                             <td>@Model.StudentName</td>
 *@                        </tr>
                        <tr>
                            <th>Roll Number</th>
@*                             <td>@Model.RollNumber</td>
 *@                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>@Model.EmailPk</td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>@Model.PhoneNumber</td>
                        </tr>
                        <tr>
                            <th>Department</th>
                            <td>@Model.DepartmentPk?.DepartmentName</td>
                        </tr>
                        <tr>
                            <th>Academic Year</th>
@*                             <td>@Model.AcademicYear?.YearRange</td>
 *@                        </tr>
                        <tr>
                            <th>NRC</th>
                            <td>
                                @($"{Model.NrcPk?.RegionCodeM}/{Model.NrcPk?.TownshipCodeM}({Model.NrctypePk?.TypeCode}){ToMyanmarDigits(Model.Nrcnumber.ToString())}")
                            </td>
                        </tr>
                    </table>

                    <form asp-action="Delete" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="StudentPkId" />

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn text-white px-4" style="background-color: #8c5dd1;">
                                <i class="bi bi-trash"></i> Yes, Delete
                            </button>
                            <a asp-action="Dashboard" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    string ToMyanmarDigits(string number)
    {
        if (string.IsNullOrEmpty(number)) return "";

        var myanmarDigits = new[] { '၀', '၁', '၂', '၃', '၄', '၅', '၆', '၇', '၈', '၉' };
        return string.Concat(number.Select(c => char.IsDigit(c) ? myanmarDigits[c - '0'] : c));
    }
}
