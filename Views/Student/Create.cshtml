<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        :root {
            --primary: #4361ee;
            --secondary: #3f37c9;
            --success: #4cc9f0;
            --light: #f8f9fa;
            --dark: #212529;
            --border: #dee2e6;
            --card-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
            --input-focus: rgba(67, 97, 238, 0.2);
        }

        body {
            background: linear-gradient(135deg, #e4eefd);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .registration-card {
            background: white;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            margin-bottom: 30px;
        }

        .card-header {
            background: #8c5dd1;
            color: white;
            padding: 25px 30px;
            border-bottom: none;
        }

        .card-body {
            padding: 30px;
        }

        .section-title {
            font-weight: 600;
            color: var(--primary);
            padding-bottom: 10px;
            margin: 25px 0 20px;
            border-bottom: 2px solid rgba(67, 97, 238, 0.1);
            position: relative;
        }

            .section-title:after {
                content: '';
                position: absolute;
                left: 0;
                bottom: -2px;
                width: 70px;
                height: 2px;
                background: var(--primary);
            }

        .form-label {
            font-weight: 600;
            color: #495057;
            margin-bottom: 8px;
        }

        .form-control, .form-select {
            border: 2px solid var(--border);
            border-radius: 8px;
            padding: 12px 15px;
            transition: all 0.3s;
        }

            .form-control:focus, .form-select:focus {
                border-color: var(--primary);
                box-shadow: 0 0 0 4px var(--input-focus);
            }

        .nrc-preview {
            background-color: #f0f4ff;
            border-radius: 8px;
            padding: 15px;
            margin-top: 10px;
            font-size: 1.2rem;
            font-weight: 600;
            color: var(--primary);
            text-align: center;
            min-height: 60px;
            display: flex;
            align-items: center;
            justify-content: center;
            border: 1px dashed #a8c6fa;
        }

        .btn-primary {
            background: linear-gradient(120deg,#8c5dd1);
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
            box-shadow: 0 4px 10px rgba(67, 97, 238, 0.3);
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(67, 97, 238, 0.4);
            }

        .btn-secondary {
            background: #6c757d;
            border: none;
            padding: 12px 30px;
            font-weight: 600;
            border-radius: 8px;
            transition: all 0.3s;
        }

        .input-icon {
            position: relative;
        }

            .input-icon i {
                position: absolute;
                left: 15px;
                top: 50%;
                transform: translateY(-50%);
                color: #adb5bd;
            }

            .input-icon input {
                padding-left: 45px;
            }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .logo-container {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 5px;
        }

        .logo {
            width: 50px;
            height: 50px;
            background: linear-gradient(120deg, var(--success), var(--primary));
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
        }

        .logo-text {
            font-weight: 1000;
            font-size: 2rem;
            color: white;
            letter-spacing: 0.5px;
        }

       

        .section-title {
            margin: 20px 0 15px;
        }

        
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="registration-card">
                    <div class="card-header">
                        <div class="logo-container">
                            <div class="logo">
                                <i class="fas fa-graduation-cap"></i>
                            </div>
                            <div class="logo-text">Student Registration</div>
                        </div>
                        <p class="mb-0 mt-2">Register new students for academic programs</p>
                    </div>

                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            @if (ViewBag.NextAction != null && ViewBag.NextAction == "CreateProject")
                            {
                                <input type="hidden" name="nextAction" value="CreateProject" />
                            }

                            <!-- Personal Information Section -->
                            <h5 class="section-title">
                                <i class="fas fa-user me-2"></i>Personal Information
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Student Name</label>
                                        <div class="input-icon">
                                            <i class="fas fa-user"></i>
                                            <input asp-for="Student.StudentName" class="form-control" placeholder="Enter full name" />
                                        </div>
                                        <span asp-validation-for="Student.StudentName" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Roll Number</label>
                                        <div class="input-icon">
                                            <i class="fas fa-id-card"></i>
                                            <input asp-for="Student.Email.RollNumber" class="form-control" placeholder="Enter roll number" />
                                        </div>
                                        <span asp-validation-for="Student.Email.RollNumber" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Email Address</label>
                                        <div class="input-icon">
                                            <i class="fas fa-envelope"></i>
                                            <input asp-for="Student.Email.EmailAddress" class="form-control" placeholder="Enter email" />
                                        </div>
                                        <span asp-validation-for="Student.Email.EmailAddress" class="text-danger"></span>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Phone Number</label>
                                        <div class="input-icon">
                                            <i class="fas fa-phone"></i>
                                            <input asp-for="Student.PhoneNumber" class="form-control" placeholder="Enter phone number" />
                                        </div>
                                        <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Academic Information Section -->
                            <h5 class="section-title">
                                <i class="fas fa-book me-2"></i>Academic Information
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label asp-for="Student.AcademicYear_pkId" class="form-label">Academic Year</label>
                                        <select asp-for="Student.AcademicYear_pkId" class="form-select" asp-items="@(new SelectList(Model.AcademicYearList, "AcademicYear_pkId", "YearRange"))">
                                            <option value="">-- Select Academic Year --</option>
                                        </select>
                                        <span asp-validation-for="Student.AcademicYear_pkId" class="text-danger"></span>
                                    </div>
                                </div>
                             
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label class="form-label">Department</label>
                                        <select asp-for="Student.Department_pkID" class="form-select"
                                                asp-items="@(new SelectList(Model.DepartmentList, "Department_pkID", "DepartmentName"))">
                                            <option value="">-- Select Department --</option>
                                        </select>
                                        <span asp-validation-for="Student.Department_pkID" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- NRC Information Section -->
                            <h5 class="section-title">
                                <i class="fas fa-address-card me-2"></i>NRC Information
                            </h5>

                            <div class="row">
                                <!-- State Number -->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">State Number</label>
                                        <select class="form-select" id="stateNumber"
                                                data-state-selector
                                                data-township-url="@Url.Action("GetTownshipsByRegion", "Student")">
                                            <option value="">-- Select State --</option>
                                            @foreach (var code in Model.RegionCodeMList.OrderBy(c => MyanmarDigitsToInt(c)))
                                            {
                                                <option value="@code">@code</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                                <!-- Township -->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">Township</label>
                                        <select asp-for="Student.NRC_pkId" class="form-select" id="township" data-township-selector>
                                            <option value="">-- Select Township --</option>
                                        </select>
                                        <span asp-validation-for="Student.NRC_pkId" class="text-danger"></span>
                                    </div>
                                </div>

                                <!-- NRC Type -->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">NRC Type</label>
                                        <select asp-for="Student.NRCType_pkId" class="form-select">
                                            <option value="">-- Select Type --</option>
                                            @foreach (var type in Model.NRCTypeList)
                                            {
                                                <option value="@type.NRCType_pkId">@type.TypeCode</option>
                                            }
                                        </select>
                                        <span asp-validation-for="Student.NRCType_pkId" class="text-danger"></span>
                                    </div>
                                </div>
                              
                                <!-- NRC Number -->
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label class="form-label">NRC Number</label>
                                        <input asp-for="Student.NRCNumber" class="form-control" maxlength="6" placeholder="Enter NRC Number" />
                                        <span asp-validation-for="Student.NRCNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                           @*  <div class="form-group">
                                <label class="form-label">Created By</label>
                                <input asp-for="Student.CreatedBy" class="form-control" placeholder="Enter creator name" />
                                <span asp-validation-for="Student.CreatedBy" class="text-danger"></span>
                            </div> *@
                       
                            <!-- Form Actions -->
                            <div class="d-flex justify-content-between align-items-center mt-4 pt-3 border-top">
                            
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save me-2"></i>Create Student
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />

        <script>
            $(document).ready(function() {
                // State number change handler
                $('#stateNumber').change(function() {
                    var selectedRegionCode = $(this).val();

                    // Clear township dropdown and reset display
                    $('#township').empty().append('<option value="">-- Select Township --</option>');
                    $('#township-code-m').text('');
                    $('#township-code-e').text('');

                    if (selectedRegionCode) {
                        $.ajax({
                            url: '@Url.Action("GetTownshipsByRegion", "Student")',
                            type: 'GET',
                            data: { regionCode: selectedRegionCode },
                            // Client: Display only townshipCode_M
                            success: function(data) {
                                $.each(data, function(i, item) {
                                    const option = new Option(item.townshipCode_M, item.nRC_pkId);
                                    $(option).data({
                                        'township-code-m': item.townshipCode_M,
                                        'township-code-e': item.townshipCode_E,
                                        'township-name': item.townshipName
                                    });
                                    $('#township').append(option);
                                });
                            },
                            error: function() {
                                console.error('Error loading townships');
                            }
                        });
                       $('form').submit(function (e) {
                            alert('Student created successfully!');
                         });
                    }
                });

                // NEW: Township change handler
                $('#township').change(function() {
                    const selectedOption = $(this).find(':selected');

                    // Update display elements
                    $('#township-code-m').text(selectedOption.data('township-code-m') || '');
                    $('#township-code-e').text(selectedOption.data('township-code-e') || '');
                });
            });
        </script>
    }
</body>
</html> 