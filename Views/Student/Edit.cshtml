@functions {
    int MyanmarDigitsToInt(string myanmarNumber)
    {
        var map = new Dictionary<char, int>
            {
                ['၀'] = 0,
                ['၁'] = 1,
                ['၂'] = 2,
                ['၃'] = 3,
                ['၄'] = 4,
                ['၅'] = 5,
                ['၆'] = 6,
                ['၇'] = 7,
                ['၈'] = 8,
                ['၉'] = 9
            };

        int result = 0;
        foreach (var ch in myanmarNumber)
        {
            if (map.TryGetValue(ch, out int digit))
            {
                result = result * 10 + digit;
            }
        }
        return result;
    }
}

