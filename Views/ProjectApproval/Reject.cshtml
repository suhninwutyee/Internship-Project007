@model ProjectManagementSystem.DBModels.Project

@{
    ViewData["Title"] = "Reject Project";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h1>Reject Project</h1>
<h3>Please provide a reason for rejection</h3>
<hr />
<div class="row">
    <div class="col-md-6">
        <dl class="row">
            <dt class="col-sm-3">Project Name</dt>
            <dd class="col-sm-9">@Model.ProjectName</dd>

            <dt class="col-sm-3">Company</dt>
            <dd class="col-sm-9">@Model.CompanyPk?.CompanyName</dd>
        </dl>

        <form asp-action="Reject">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProjectPkId" />

            <div class="form-group">
                <label asp-for="AdminComment" class="control-label">Rejection Reason</label>
                <textarea asp-for="AdminComment" class="form-control" rows="4"></textarea>
                <span asp-validation-for="AdminComment" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Confirm Rejection" class="btn btn-danger" />
                <a asp-action="Pending" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>