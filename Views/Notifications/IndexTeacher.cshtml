@model IEnumerable<ProjectManagementSystem.DBModels.NotificationViewModel>

<h2>Student Submissions (Teacher)</h2>

<div class="list-group">
    @if (Model.Any())
    {
        @foreach (var notif in Model.OrderByDescending(n => n.CreatedAt))
        {
            var isUnread = !(notif.IsRead ?? false);
            <div class="list-group-item @(isUnread ? "list-group-item-unread" : "")">
                <strong>@notif.Title</strong> -
                <a href="@Url.Action("Details","ProjectApproval", new { id = notif.ProjectId })">
                    @notif.Message
                </a>
                <br />
                <small>@notif.CreatedAt.ToString("MMM dd, yyyy HH:mm")</small>
            </div>
        }
    }
    else
    {
        <div>No student submissions</div>
    }
</div>
