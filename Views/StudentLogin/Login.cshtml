@model StudentLoginViewModel

@{
    ViewData["Title"] = "Student Login";
    Layout = "_Layout";
}
<div>
    <partial name="_ProgressBarPartial" />
</div>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        body {
            background: linear-gradient(135deg, #e4eefd);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

       
        .login-container {
            justify-content: center; 
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 1000px;
            text-align: center;
        }

       
        .header-section {
            background: linear-gradient(to right, #8c5dd1); /* Gradient for the header */
            border-radius: 10px;
            padding: 20px;
            margin-bottom: 30px;
            color: white;
        }

            .header-section h2 {
                margin-bottom: 20px;
                font-weight: 600;
            }

        .feature-cards {
            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 30px;
        }

        .feature-card {
            background-color: rgba(255, 255, 255, 0.2); /* Slightly transparent white for cards */
            border-radius: 10px;
            padding: 15px;
            flex: 1;
            min-width: 180px;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9em;
        }

            .feature-card i {
                font-size: 2em;
                margin-bottom: 10px;
            }

        .login-form-section {
            text-align: left;
            padding-top: 20px;
            justify-content: center;
        }

            .login-form-section h3 {
                font-size: 1.5em;
                margin-bottom: 10px;
                color: #333;
            }

            .login-form-section p {
                color: #666;
                margin-bottom: 20px;
            }

        .form-control {
            border-radius: 8px;
            padding: 12px 15px;
            border: 1px solid #ddd;
        }

        .form-label {
            font-weight: 500;
            color: #555;
            margin-bottom: 5px;
        }

        .btn-send-otp {
            background: linear-gradient(to right, #8c5dd1); /* Gradient button */
            color: white;
            border: none;
            border-radius: 8px;
            padding: 12px 25px;
            font-size: 1.1em;
            width: 100%;
            margin-top: 20px;
            transition: all 0.3s ease;
        }

            .btn-send-otp:hover {
                opacity: 0.9;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            }

        .form-check {
            margin-top: 15px;
            text-align: left;
        }

        .form-check-label {
            font-size: 0.9em;
            color: #666;
        }

        .text-danger {
            font-size: 0.85em;
        }
    </style>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    <div class="d-flex justify-content-center align-item-center">
    <div class="login-container">
        <div class="header-section">
           <h2>Welcome to Internship Project Information Portal</h2>
                <h5 class="benefits-title"><i class="fas fa-user-graduate"></i> Final Year Student</h5>
            <div class="feature-cards">
                <div class="feature-card">
                    <i class="fas fa-book"></i>
                        <span>Access course materials and learn from previous internship projects</span>
                </div>
                <div class="feature-card">
                    <i class="fas fa-upload"></i>
                        <span>Submit and manage your internship projects in one centralized platform</span>
                </div>
                <div class="feature-card">
                    <i class="fas fa-chart-line"></i>
                        <span>Track your progress with detailed analytics and feedback</span>
                </div>
                    <div class="feature-card">
                        <i class="fas fa-network-wired"></i>
                        <span>Connect with industry opportunities through your projects</span>
                    </div>
            </div>
        </div>

        <div class="login-form-section">
            <h3>Student Login</h3>
            <p>Enter your credentials to access your account</p>

            <form asp-action="Login" method="post">
                <div class="mb-3">
                    <label asp-for="RollNumber" class="form-label">Roll Number</label>
                    <input asp-for="RollNumber" class="form-control" placeholder="Enter your roll number" required>
                    <span asp-validation-for="RollNumber" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EmailAddress" class="form-label">Email Address</label>
                    <input asp-for="EmailAddress" class="form-control" placeholder="Enter your email address" >
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" value="true">
                    <label class="form-check-label" for="rememberMe">
                        Remember me
                    </label>
                </div>
                <button type="submit" class="btn btn-send-otp">Send OTP</button>
            </form>

            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger mt-3" role="alert">@ViewBag.Error</div>
            }
        </div>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.3/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>