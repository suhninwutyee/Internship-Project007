<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Final Year Portal</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        html, body {
            height: 100%;
            margin: 0;
        }

        .full-height {
            height: 100vh;
        }

        .sidebar {
            background-color: #343a40;
            color: #fff;
            padding-top: 1.5rem;
        }

            .sidebar .nav-link {
                color: #ffffff;
                padding: 10px 15px;
            }

                .sidebar .nav-link:hover {
                    background-color: #495057;
                }

                .sidebar .nav-link.active {
                    background-color: #0d6efd;
                }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row full-height">

            <!-- Sidebar with active nav and login at bottom -->
            <div class="col-md-3 col-lg-2 sidebar d-flex flex-column justify-content-between">
                <div>
                    <h5 class="text-white text-center mb-4">Navigation</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Public" asp-action="Index">Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "ProjectIdeas" ? "active" : "")" asp-controller="Public" asp-action="ProjectIdeas">Project Ideas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "InternshipCompanies" ? "active" : "")" asp-controller="Public" asp-action="InternshipCompanies">Internship Companies</a>
                        </li>                        
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "SuccessStories" ? "active" : "")" asp-controller="Public" asp-action="SuccessStories">Success Stories</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Announcements" ? "active" : "")" asp-controller="Public" asp-action="Announcements">Announcements</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Help" ? "active" : "")" asp-controller="Public" asp-action="Help">FAQ / Help</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Contact" ? "active" : "")" asp-controller="Public" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                </div>

                <!-- Login button at bottom of sidebar -->
                <div class="text-center mb-3">
                    <a class="btn btn-outline-light w-75" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Login
                    </a>
                </div>
            </div>

            <!-- Main content area -->
            <div class="col-md-9 col-lg-10 d-flex flex-column">
                <main class="px-4 py-2">
                    @RenderBody()
                </main>
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
