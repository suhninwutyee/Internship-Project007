<style>
    .progress-steps-container {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        max-width: 1000px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .progress-steps {
        display: flex;
        justify-content: space-between;
        position: relative;
        margin-bottom: 50px;
    }

    .progress-track {
        position: absolute;
        top: 25px;
        left: 10%;
        right: 10%;
        height: 6px;
        background-color: #f0f2f5;
        border-radius: 3px;
        z-index: 0;
        overflow: hidden;
    }

    .progress-fill {
        position: absolute;
        top: 0;
        left: 0;
        height: 100%;
        background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
        width: 0%;
        transition: width 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        border-radius: 3px;
    }

    .step-item {
        display: flex;
        flex-direction: column;
        align-items: center;
        position: relative;
        z-index: 1;
        width: 25%;
    }

    .step-indicator {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: white;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 600;
        color: #a0aec0;
        transition: all 0.4s ease;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        border: 3px solid #ffffff;
        position: relative;
    }

    .step-label {
        margin-top: 15px;
        font-size: 0.9em;
        color: #a0aec0;
        font-weight: 500;
        transition: all 0.3s ease;
        text-align: center;
        position: absolute;
        bottom: -35px;
        width: 120px;
    }

    .step-item.active .step-indicator {
        background: white;
        color: #4facfe;
        border-color: #4facfe;
        transform: scale(1.1);
        box-shadow: 0 8px 15px rgba(79, 172, 254, 0.2);
    }

    .step-item.active .step-label {
        color: #2d3748;
        font-weight: 600;
    }

    .step-item.completed .step-indicator {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        color: white;
        border-color: transparent;
    }

    .step-item.completed .step-label {
        color: #4facfe;
    }

    .step-icon {
        font-size: 1.2em;
        transition: all 0.3s ease;
    }

    .step-connector {
        position: absolute;
        left: -50%;
        width: 100%;
        height: 6px;
        top: 25px;
        z-index: -1;
        background: linear-gradient(90deg, #4facfe 0%, #00f2fe 100%);
        opacity: 0;
        transition: opacity 0.4s ease;
    }

    .step-item.completed + .step-item .step-connector {
        opacity: 1;
    }

    .step-item.active .step-connector {
        width: 50%;
        opacity: 1;
    }

    .step-item:first-child .step-connector {
        display: none;
    }

    .step-indicator:hover {
        cursor: pointer;
        transform: translateY(-3px) scale(1.05);
        box-shadow: 0 10px 20px rgba(79, 172, 254, 0.3);
    }

    
    .step-item.active .step-indicator {
        animation: pulse 2s infinite;
    }

    /* Tooltip effect */
    .step-tooltip {
        position: absolute;
        top: -45px;
        left: 50%;
        transform: translateX(-50%);
        background: #2d3748;
        color: white;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 0.8em;
        font-weight: normal;
        opacity: 0;
        transition: all 0.3s ease;
        pointer-events: none;
        white-space: nowrap;
    }

        .step-tooltip::after {
            content: '';
            position: absolute;
            top: 100%;
            left: 50%;
            margin-left: -5px;
            border-width: 5px;
            border-style: solid;
            border-color: #2d3748 transparent transparent transparent;
        }

    .step-indicator:hover .step-tooltip {
        opacity: 1;
        top: -55px;
    }
</style>

<div class="progress-steps-container">
    <div class="progress-steps">
        <div class="progress-track">
            <div class="progress-fill" style="width: @((ViewBag.CurrentStep-1)*33.33)%;"></div>
        </div>

        <div class="step-item @(ViewBag.CurrentStep >= 1 ? "completed" : "") @(ViewBag.CurrentStep == 1 ? "active" : "")">
            <a href="@Url.Action("Login", "StudentLogin")">
                <div class="step-indicator">
                    @if (ViewBag.CurrentStep > 1)
                    {
                        <i class="fas fa-check step-icon"></i>
                    }
                    else
                    {
                        <i class="fas fa-sign-in-alt step-icon"></i>
                    }
                    <span class="step-tooltip">Student Login</span>
                </div>
            </a>
            <div class="step-label">Login</div>
            <div class="step-connector"></div>
        </div>

        <div class="step-item @(ViewBag.CurrentStep >= 2 ? "completed" : "") @(ViewBag.CurrentStep == 2 ? "active" : "")">
            <a href="@Url.Action("ChooseRole", "StudentLogin")">
                <div class="step-indicator">
                    @if (ViewBag.CurrentStep > 2)
                    {
                        <i class="fas fa-check step-icon"></i>
                    }
                    else
                    {
                        <i class="fas fa-user-edit step-icon"></i>
                    }
                    <span class="step-tooltip">Student Role</span>
                </div>
            </a>
            <div class="step-label">Role</div>
            <div class="step-connector"></div>
        </div>

        <div class="step-item @(ViewBag.CurrentStep >= 4 ? "completed" : "") @(ViewBag.CurrentStep == 4 ? "active" : "")">
            <a href="@Url.Action("AddMember", "Project")">
                <div class="step-indicator">
                    @if (ViewBag.CurrentStep > 4)
                    {
                        <i class="fas fa-check step-icon"></i>
                    }
                    else
                    {
                        <i class="fas fa-users step-icon"></i>
                    }
                    <span class="step-tooltip">Add Team Members</span>
                </div>
            </a>
            <div class="step-label">Team Setup</div>
            <div class="step-connector"></div>
        </div>

        <div class="step-item @(ViewBag.CurrentStep >= 3 ? "completed" : "") @(ViewBag.CurrentStep == 3 ? "active" : "")">
            <a href="@Url.Action("Upload", "Project")">
                <div class="step-indicator">
                    @if (ViewBag.CurrentStep > 3)
                    {
                        <i class="fas fa-check step-icon"></i>
                    }
                    else
                    {
                        <i class="fas fa-file-upload step-icon"></i>
                    }
                    <span class="step-tooltip">Submit Project</span>
                </div>
            </a>
            <div class="step-label">Submission</div>
        </div>
    </div>
</div>