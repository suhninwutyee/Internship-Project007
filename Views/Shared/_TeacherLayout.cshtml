<!DOCTYPE html>
<html>
<head>
        <!-- Your existing head content -->
        @RenderSection("Styles", required: false)
    
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Teacher Portal</title>

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">

    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        :root {
            /* Color Palette */
            --snow-white: #fff;
            --wine-red: #722f37;
            --light-wine: #a0535b;
            --dark-wine: #4a1c22;
            --soft-gray: #f8f9fa;
            --medium-gray: #e0e0e0;
            --text-dark: #2d3748;
            --text-light: #718096;
            --accent-blue: #4299e1;
            --accent-green: #48bb78;
            --accent-yellow: #ecc94b;
            /* Spacing */
            --sidebar-width: 280px;
            --sidebar-collapsed: 80px;
            /* Shadows */
            --shadow-sm: 0 1px 3px rgba(0,0,0,0.12);
            --shadow-md: 0 4px 6px rgba(0,0,0,0.1);
            --shadow-lg: 0 10px 25px rgba(0,0,0,0.1);
            /* Transitions */
            --transition-fast: 0.15s ease;
            --transition-normal: 0.3s ease;
            --transition-slow: 0.5s ease;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--soft-gray);
            color: var(--text-dark);
            line-height: 1.6;
            display: flex;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* ============ SIDEBAR ============ */
        .sidebar {
            width: var(--sidebar-width);
            background: var(--snow-white);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            z-index: 100;
            box-shadow: var(--shadow-md);
            transition: var(--transition-normal);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .sidebar-header {
            padding: 1.5rem;
            display: flex;
            align-items: center;
            border-bottom: 1px solid rgba(0,0,0,0.05);
            min-height: 80px;
        }

        .logo-icon {
            font-size: 2rem;
            color: var(--wine-red);
            margin-right: 12px;
            min-width: 40px;
            transition: var(--transition-normal);
        }

        .logo-text {
            font-weight: 600;
            font-size: 1.3rem;
            color: var(--dark-wine);
            white-space: nowrap;
            transition: var(--transition-normal);
        }

        .nav-menu {
            flex: 1;
            padding: 1rem 0;
            overflow-y: auto;
        }

        .nav-item {
            position: relative;
            margin: 0.25rem 1rem;
        }

        .nav-link {
            display: flex;
            align-items: center;
            padding: 0.85rem 1rem;
            color: var(--text-light);
            text-decoration: none;
            border-radius: 8px;
            transition: var(--transition-fast);
            white-space: nowrap;
        }

            .nav-link:hover {
                background: rgba(114, 47, 55, 0.08);
                color: var(--wine-red);
            }

            .nav-link.active {
                background: rgba(114, 47, 55, 0.1);
                color: var(--wine-red);
                font-weight: 500;
            }

            .nav-link i {
                font-size: 1.2rem;
                width: 24px;
                margin-right: 12px;
                text-align: center;
                transition: var(--transition-normal);
            }

        .nav-text {
            transition: var(--transition-normal);
        }

        .nav-badge {
            margin-left: auto;
            background: var(--accent-blue);
            color: white;
            font-size: 0.7rem;
            padding: 0.2rem 0.5rem;
            border-radius: 10px;
            font-weight: 600;
        }

        .sidebar-footer {
            padding: 1rem;
            border-top: 1px solid rgba(0,0,0,0.05);
            margin-top: auto;
        }

        .user-profile {
            display: flex;
            align-items: center;
            padding: 0.5rem;
            border-radius: 8px;
            transition: var(--transition-fast);
            cursor: pointer;
        }

            .user-profile:hover {
                background: rgba(114, 47, 55, 0.08);
            }

        .user-avatar {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            background: var(--wine-red);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 600;
            margin-right: 10px;
            flex-shrink: 0;
        }

        .user-info {
            white-space: nowrap;
            overflow: hidden;
        }

        .user-name {
            font-weight: 500;
            font-size: 0.9rem;
            margin-bottom: 0.1rem;
        }

        .user-role {
            font-size: 0.75rem;
            color: var(--text-light);
        }

        .logout-btn {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            color: var(--light-wine);
            text-decoration: none;
            border-radius: 8px;
            transition: var(--transition-fast);
            margin-top: 0.5rem;
        }

            .logout-btn:hover {
                background: rgba(114, 47, 55, 0.08);
                color: var(--wine-red);
            }

            .logout-btn i {
                margin-right: 12px;
                font-size: 1.1rem;
            }

        /* Collapsed sidebar state */
        .sidebar-collapsed {
            width: var(--sidebar-collapsed);
        }

            .sidebar-collapsed .logo-text,
            .sidebar-collapsed .nav-text,
            .sidebar-collapsed .user-info,
            .sidebar-collapsed .logout-btn span,
            .sidebar-collapsed .nav-badge {
                opacity: 0;
                width: 0;
                height: 0;
                overflow: hidden;
                margin: 0;
                display: none;
            }

            .sidebar-collapsed .nav-link {
                justify-content: center;
                padding: 0.85rem 0;
            }

                .sidebar-collapsed .nav-link i {
                    margin-right: 0;
                    font-size: 1.3rem;
                }

            .sidebar-collapsed .user-profile {
                justify-content: center;
                padding: 0.5rem 0;
            }

            .sidebar-collapsed .user-avatar {
                margin-right: 0;
            }

        /* ============ MAIN CONTENT ============ */
        .main-content {
            flex: 1;
            margin-left: var(--sidebar-width);
            transition: var(--transition-normal);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
        }

        .sidebar-collapsed + .main-content {
            margin-left: var(--sidebar-collapsed);
        }

        .page-header {
            background: var(--snow-white);
            padding: 1.5rem 2rem;
            box-shadow: var(--shadow-sm);
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: sticky;
            top: 0;
            z-index: 10;
        }

        .page-title {
            font-size: 1.5rem;
            color: var(--dark-wine);
            font-weight: 600;
            margin: 0;
        }

        .page-actions {
            display: flex;
            gap: 0.75rem;
        }

        .btn {
            padding: 0.6rem 1rem;
            border-radius: 6px;
            font-weight: 500;
            font-size: 0.9rem;
            cursor: pointer;
            transition: var(--transition-fast);
            display: inline-flex;
            align-items: center;
            border: none;
        }

            .btn i {
                margin-right: 8px;
            }

        .btn-primary {
            background: var(--wine-red);
            color: white;
        }

            .btn-primary:hover {
                background: var(--dark-wine);
                transform: translateY(-1px);
            }

        .btn-secondary {
            background: var(--medium-gray);
            color: var(--text-dark);
        }

            .btn-secondary:hover {
                background: #d1d5db;
            }

        .toggle-sidebar {
            background: none;
            border: none;
            font-size: 1.2rem;
            color: var(--text-light);
            cursor: pointer;
            padding: 0.5rem;
            border-radius: 50%;
            transition: var(--transition-fast);
        }

            .toggle-sidebar:hover {
                background: rgba(0,0,0,0.05);
                color: var(--wine-red);
            }

        .content-container {
            flex: 1;
            padding: 2rem;
        }

        /* ============ FOOTER ============ */
        .footer {
            background: var(--snow-white);
            padding: 1.5rem;
            text-align: center;
            color: var(--text-light);
            font-size: 0.85rem;
            border-top: 1px solid var(--medium-gray);
        }

        /* ============ RESPONSIVE ============ */
        @@media (max-width: 992px) {
            .sidebar

        {
            transform: translateX(-100%);
        }

        .sidebar.active {
            transform: translateX(0);
        }

        .main-content {
            margin-left: 0;
        }

        .toggle-sidebar {
            display: block;
        }

        }

        @@media (min-width: 993px) {
            .toggle-sidebar

        {
            display: none;
        }

        }

        /* ============ ANIMATIONS ============ */
        @@keyframes fadeInUp {
            from

        {
            opacity: 0;
            transform: translateY(20px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }

        }

        .animate-fade-in {
            animation: fadeInUp 0.5s ease-out forwards;
        }

        .delay-1 {
            animation-delay: 0.1s;
        }

        .delay-2 {
            animation-delay: 0.2s;
        }

        .delay-3 {
            animation-delay: 0.3s;
        }
    </style>
</head>
<body>
    <!-- Sidebar Navigation -->
    <aside class="sidebar animate__animated animate__fadeInLeft">
        <div class="sidebar-header">
            <div class="logo-icon">
                <i class="fas fa-chalkboard-teacher"></i>
            </div>
            <div class="logo-text">EduPortal</div>
        </div>

        <ul class="nav-menu">
            <li class="nav-item animate-fade-in delay-1">
                <a href="/Email/Index" class="nav-link active">
                    <i class="fas fa-envelope"></i>
                    <span class="nav-text">Manage Emails</span>
                    <span class="nav-badge">3 New</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-2">
                <a href="/InternComs/Index" class="nav-link">
                    <i class="fas fa-tachometer-alt"></i>
                    <span class="nav-text">Admin Dashboard</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-3">
                <a href="/Admin/ActivityLogs" class="nav-link">
                    <i class="fas fa-history"></i>
                    <span class="nav-text">Activity Logs</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-1">
                <a href="#" class="nav-link">
                    <i class="fas fa-calendar-alt"></i>
                    <span class="nav-text">Calendar</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-2">
                <a href="#" class="nav-link">
                    <i class="fas fa-users"></i>
                    <span class="nav-text">Students</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-3">
                <a href="#" class="nav-link">
                    <i class="fas fa-book"></i>
                    <span class="nav-text">Courses</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-1">
                <a href="#" class="nav-link">
                    <i class="fas fa-chart-bar"></i>
                    <span class="nav-text">Reports</span>
                </a>
            </li>
            <li class="nav-item animate-fade-in delay-2">
                <a href="#" class="nav-link">
                    <i class="fas fa-cog"></i>
                    <span class="nav-text">Settings</span>
                </a>
            </li>
        </ul>

        <div class="sidebar-footer animate__animated animate__fadeInUp">
            <div class="user-profile">
                <div class="user-avatar">JD</div>
                <div class="user-info">
                    <div class="user-name">John Doe</div>
                    <div class="user-role">Professor</div>
                </div>
            </div>
            <a href="/Account/Logout" class="logout-btn">
                <i class="fas fa-sign-out-alt"></i>
                <span>Logout</span>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <header class="page-header">
            <button class="toggle-sidebar">
                <i class="fas fa-bars"></i>
            </button>
            <h1 class="page-title">@ViewData["Title"]</h1>
            <div class="page-actions">
                <button class="btn btn-secondary">
                    <i class="fas fa-download"></i> Export
                </button>
                <button class="btn btn-primary">
                    <i class="fas fa-plus"></i> New Item
                </button>
            </div>
        </header>

        <div class="content-container">
            @RenderBody()
        </div>

        <footer class="footer">
            <p>© 2025 EduPortal Teacher Dashboard | Version 2.1.0</p>
        </footer>
    </main>

    <script>
        // Toggle sidebar collapse
        document.querySelector('.toggle-sidebar').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('sidebar-collapsed');

            // For mobile view
            if (window.innerWidth <= 992) {
                document.querySelector('.sidebar').classList.toggle('active');
            }
        });

        // Add active class to current nav item
        document.querySelectorAll('.nav-link').forEach(link => {
            if(link.href === window.location.href) {
                link.classList.add('active');
            }
        });

        // Smooth animations
        document.addEventListener('DOMContentLoaded', () => {
            const animatedElements = document.querySelectorAll('.animate-fade-in');

            animatedElements.forEach((el, index) => {
                el.style.opacity = 0;
                setTimeout(() => {
                    el.style.animation = `fadeInUp 0.5s ease-out ${index * 0.1}s forwards`;
                }, 100);
            });
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>