<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Teacher Portal</title>
    <!-- Boxicons -->
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="app">
        <!-- SIDEBAR -->
        <aside class="sidebar" id="sidebar">
            <div class="brand">
                <i class="bx bx-rocket"></i>
                <span class="brand-name">Teacher Portal</span>
            </div>
            <ul class="menu">
                <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Dashboard" ? "active" : "")">
                    <a asp-area="" asp-controller="Teacher" asp-action="Dashboard">
                        <i class="bx bx-grid-alt"></i>
                        <span class="menu-text">Dashboard</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Approvals" ? "active" : "")">
                    <a asp-area="" asp-controller="Home" asp-action="Approvals">
                        <i class="bx bx-check-square"></i>
                        <span class="menu-text">Project Approvals</span>
                    </a>
                </li>
                <li class="menu-item has-submenu" id="managementMenu">
                    <div class="submenu-header">
                        <i class="bx bx-briefcase"></i>
                        <span class="menu-text">Management</span>
                        <i class="bx bx-chevron-right submenu-toggle"></i>
                    </div>
                    <ul class="submenu">
                        <li class="submenu-item"><a asp-area="" asp-controller="Email" asp-action="Index">Email</a></li>
                        <li class="submenu-item"><a asp-area="" asp-controller="Company" asp-action="Index">Company</a></li>
                        <li class="submenu-item"><a asp-area="" asp-controller="Management" asp-action="Tasks">Tasks</a></li>
                    </ul>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Submitted" ? "active" : "")">
                    <a asp-area="" asp-controller="ProjectApproval" asp-action="Index">
                        <i class="bx bx-folder-open"></i>
                        <span class="menu-text">Submitted Projects</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "ActivityLog" ? "active" : "")">
                    <a asp-area="" asp-controller="Admin" asp-action="ActivityLogs">
                        <i class="bx bx-list-ul"></i>
                        <span class="menu-text">Activity Log</span>
                    </a>
                </li>
                <li class="menu-item @(ViewContext.RouteData.Values["Action"].ToString() == "Settings" ? "active" : "")">
                    <a asp-area="" asp-controller="Home" asp-action="Settings">
                        <i class="bx bx-cog"></i>
                        <span class="menu-text">Settings</span>
                    </a>
                </li>
            </ul>
            <div class="toggle-collapse" id="collapseBtn">
                <i class="bx bx-chevrons-left"></i>
            </div>
        </aside>

        <!-- MAIN + NAVBAR -->
        <div class="main">
            <header class="navbar">
                <i class="bx bx-menu toggle-btn" id="menuBtn"></i>
                <div class="search">
                    <i class="bx bx-search"></i>
                    <input type="text" placeholder="Search students, projects..." />
                </div>
                <div class="nav-icons">
                    <div class="icon-btn notification">
                        <i class="bx bx-bell"></i>
                        <span class="badge">3</span>
                    </div>
                    <div class="icon-btn profile">
                        <span class="avatar">@User.Identity.Name.Substring(0, 1).ToUpper()</span>
                        <span class="profile-name">@User.Identity.Name</span>
                    </div>
                </div>
            </header>

            <main class="content">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>