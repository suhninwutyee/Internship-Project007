@model IEnumerable<Announcement>
@{
    ViewData["Title"] = "Manage Announcements";
}

<h2>📢 Announcements</h2>
<a asp-action="Create" class="btn btn-primary mb-3">+ New Announcement</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Start</th>
            <th>Expiry</th>
            <th>Blocks</th>
            <th>Active</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.StartDate.ToShortDateString()</td>
                <td>@(item.ExpiryDate?.ToShortDateString() ?? "-")</td>
                <td>@(item.BlocksSubmissions ? "✅" : "❌")</td>
                <td>@(item.IsActive ? "🟢 Active" : "🔴 Inactive")</td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.AnnouncementId" class="btn btn-sm btn-outline-info">
                        <i class="bi bi-eye"></i> View
                    </a>
                    <a asp-action="Edit" asp-route-id="@item.AnnouncementId" class="btn btn-sm btn-outline-warning">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.AnnouncementId" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                    @* <a asp-action="Delete" asp-route-id="@item.AnnouncementId" class="btn btn-sm btn-danger"
                       onclick="return confirm('Are you sure to delete this?');">Delete</a> *@
                </td>
            </tr>
        }
    </tbody>
</table>
