@model IEnumerable<ProjectManagementSystem.DBModels.AnnouncementViewModel>

@{
    ViewData["Title"] = "Announcements";
    Layout = "_Layout";
}

<style>
    body {
        background: linear-gradient(135deg, #e4eefd, #ffffff);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .announcement-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        height: 100%;
    }

        .announcement-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
        }

    .announcement-title {
        color: #8C5DD1;
        font-weight: 600;
    }

    .date-text {
        font-size: 0.85rem;
        color: #6c757d;
    }

    .attachment-link {
        font-size: 0.85rem;
        display: block;
        margin-bottom: 0.5rem;
    }
</style>

<div class="container py-5">
    <h3 class="mb-4 fw-bold text-center" style="color: #8C5DD1;">
        <i class="bi bi-megaphone-fill me-2"></i> Latest Announcements
    </h3>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            <i class="bi bi-info-circle me-2"></i>No active announcements at the moment.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm border-0 announcement-card d-flex flex-column h-100">
                        <div class="card-body d-flex flex-column">
                            <!-- Title -->
                            <h5 class="announcement-title mb-2">
                                <a asp-action="Detail" asp-route-id="@item.AnnouncementId" class="text-decoration-none" style="color: #8C5DD1;">
                                    @item.Title
                                </a>
                            </h5>

                            <!-- Message preview -->
                            @if (!string.IsNullOrEmpty(item.Message))
                            {
                                <p class="text-muted mt-1 mb-2">
                                    @(item.Message.Length > 100 ? item.Message.Substring(0, 100) + "..." : item.Message)
                                </p>
                            }

                            <!-- Attachment -->
                            @if (!string.IsNullOrEmpty(item.FilePath))
                            {
                                <a href="@item.FilePath" target="_blank" class="btn btn-sm btn-outline-secondary attachment-link mb-2">
                                    <i class="bi bi-paperclip me-1"></i>Download Attachment
                                </a>
                            }

                            <!-- Dates and Detail button -->
                            <div class="mt-auto d-flex flex-column">
                                <div class="d-flex flex-column flex-sm-row justify-content-between mb-2">
                                    <span class="date-text me-2">
                                        <i class="bi bi-calendar-event me-1"></i>@item.CreatedDate?.ToString("dd MMM yyyy")
                                    </span>
                                    <span class="date-text me-2">
                                        <i class="bi bi-calendar-event me-1"></i>Start: @item.StartDate?.ToString("dd MMM yyyy")
                                    </span>
                                    <span class="date-text">
                                        <i class="bi bi-calendar-x me-1"></i>Expiry: @item.ExpiryDate?.ToString("dd MMM yyyy")
                                    </span>
                                </div>

                             @*    <a asp-action="Detail" asp-route-id="@item.AnnouncementId" class="btn btn-sm btn-outline-primary mt-2">
                                    <i class="bi bi-eye me-1"></i>View
                                </a> *@
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
