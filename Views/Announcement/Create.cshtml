@model Announcement

@{
    ViewData["Title"] = "Create Announcement";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<div class="announcement-container">
    <div class="announcement-card">
        <h3 class="announcement-title">Create Announcement</h3>

        <form asp-action="Create" enctype="multipart/form-data" method="post" class="announcement-form">
            <div class="mb-3">
                <label asp-for="Title" class="form-label"></label>
                <input asp-for="Title" class="form-control input-field" />
                <span asp-validation-for="Title" class="text-danger validation-message"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Message" class="form-label"></label>
                <textarea asp-for="Message" class="form-control input-field textarea-field"></textarea>
                <span asp-validation-for="Message" class="text-danger validation-message"></span>
            </div>

            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="StartDate" class="form-label"></label>
                    <input asp-for="StartDate" type="date" class="form-control input-field" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="ExpiryDate" class="form-label"></label>
                    <input asp-for="ExpiryDate" type="date" class="form-control input-field" />
                </div>
                <div class="col-md-4 mb-3 form-check mt-4">
                    <input asp-for="BlocksSubmissions" class="form-check-input checkbox-input" />
                    <label asp-for="BlocksSubmissions" class="form-check-label checkbox-label"></label>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Attachment" class="form-label"></label>
                <input asp-for="Attachment" type="file" class="form-control input-field" accept=".pdf,.jpg,.png,.jpeg" />
                <span asp-validation-for="Attachment" class="text-danger validation-message"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn submit-button">Save</button>
                <a asp-action="Index" class="btn cancel-button">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Styles {
    <style>
        body {
            background: linear-gradient(135deg, #e4eefd, #f9f9ff);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .announcement-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .announcement-card {
            background-color: #fff;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(140, 93, 209, 0.1);
            padding: 2.5rem;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .announcement-card:hover {
                transform: translateY(-3px);
                box-shadow: 0 12px 25px rgba(140, 93, 209, 0.15);
            }

        .announcement-title {
            color: #8C5DD1;
            text-align: center;
            font-weight: 600;
            font-size: 1.8rem;
            margin-bottom: 2rem;
        }

        .form-label {
            color: #5a5a5a;
            font-weight: 500;
            margin-bottom: 0.5rem;
        }

        .input-field {
            border: 1px solid #C8C6C1;
            border-radius: 10px;
            padding: 0.75rem 1rem;
            background-color: #f9f9f9;
            transition: all 0.3s ease;
        }

            .input-field:focus {
                border-color: #8C5DD1;
                box-shadow: 0 0 0 3px rgba(140, 93, 209, 0.2);
                background-color: #fff;
                outline: none;
            }

        .textarea-field {
            resize: vertical;
            min-height: 120px;
        }

        .checkbox-input {
            width: 18px;
            height: 18px;
            margin-right: 0.5rem;
            border: 1px solid #C8C6C1;
        }

            .checkbox-input:checked {
                background-color: #8C5DD1;
                border-color: #8C5DD1;
            }

        .checkbox-label {
            color: #5a5a5a;
            font-weight: 400;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: flex-end;
        }

        .submit-button {
            background-color: #8C5DD1;
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            color: #fff;
            transition: all 0.3s ease;
        }

            .submit-button:hover {
                background-color: #7a4bc2;
                transform: translateY(-2px);
            }

        .cancel-button {
            background-color: #C8C6C1;
            border: none;
            border-radius: 10px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            color: #333;
            transition: all 0.3s ease;
        }

            .cancel-button:hover {
                background-color: #b5b3af;
                transform: translateY(-2px);
            }

        .validation-message {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            color: #dc3545;
        }

        @@media (max-width: 768px) {
            .announcement-card

        {
            padding: 1.5rem;
        }

        .button-group {
            flex-direction: column;
            gap: 0.75rem;
        }

        .submit-button, .cancel-button {
            width: 100%;
        }

        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
