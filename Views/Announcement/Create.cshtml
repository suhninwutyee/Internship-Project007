@model Announcement

@{
    ViewData["Title"] = "Create Announcement";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<h3>Create Announcement</h3>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
            </div>

    <div class="mb-3">
        <label asp-for="Message" class="form-label"></label>
        <textarea asp-for="Message" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
            </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" type="date" class="form-control" />
                    </div>
        <div class="col-md-4 mb-3">
            <label asp-for="ExpiryDate"></label>
            <input asp-for="ExpiryDate" type="date" class="form-control" />
                </div>
        <div class="col-md-4 mb-3 form-check mt-4">
            <input asp-for="BlocksSubmissions" class="form-check-input" />
            <label asp-for="BlocksSubmissions" class="form-check-label"></label>
                    </div>
                </div>
            </div>

    <div class="mb-3">
        <label asp-for="Attachment" class="form-label"></label>
        <input asp-for="Attachment" type="file" class="form-control" accept=".pdf,.jpg,.png,.jpeg" />
        <span asp-validation-for="Attachment" class="text-danger"></span>
            </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Styles {
    <style>
        .announcement-container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 0 15px;
        }

        .announcement-card {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 2.5rem;
            transition: transform 0.3s ease;
        }

            .announcement-card:hover {
                transform: translateY(-2px);
            }

        .announcement-title {
            color: #8C5DD1;
            margin-bottom: 1.5rem;
            font-weight: 600;
            text-align: center;
            font-size: 1.8rem;
        }

        .announcement-form {
            margin-top: 1.5rem;
        }

        .form-label {
            color: #5a5a5a;
            font-weight: 500;
            margin-bottom: 0.5rem;
            display: block;
        }

        .input-field {
            border: 1px solid #C8C6C1;
            border-radius: 8px;
            padding: 0.75rem 1rem;
            font-size: 1rem;
            transition: all 0.3s ease;
            background-color: #f9f9f9;
        }

            .input-field:focus {
                border-color: #8C5DD1;
                box-shadow: 0 0 0 3px rgba(140, 93, 209, 0.2);
                background-color: #fff;
                outline: none;
            }

        .textarea-field {
            resize: vertical;
            min-height: 120px;
        }

        .checkbox-input {
            width: 18px;
            height: 18px;
            margin-right: 0.5rem;
            border: 1px solid #C8C6C1;
        }

            .checkbox-input:checked {
                background-color: #8C5DD1;
                border-color: #8C5DD1;
            }

        .checkbox-label {
            color: #5a5a5a;
            font-weight: 400;
            cursor: pointer;
            user-select: none;
        }

        .button-group {
            display: flex;
            gap: 1rem;
            margin-top: 2rem;
            justify-content: flex-end;
        }

        .submit-button {
            background-color: #8C5DD1;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

            .submit-button:hover {
                background-color: #7a4bc2;
                transform: translateY(-1px);
            }

        .cancel-button {
            background-color: #C8C6C1;
            border: none;
            border-radius: 8px;
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
            color: #333;
        }

            .cancel-button:hover {
                background-color: #b5b3af;
                transform: translateY(-1px);
            }

        .validation-summary {
            color: #dc3545;
            background-color: #f8d7da;
            border-radius: 8px;
            padding: 1rem;
            margin-bottom: 1.5rem;
        }

        .validation-message {
            font-size: 0.85rem;
            margin-top: 0.25rem;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .announcement-card {
                padding: 1.5rem;
            }

            .button-group {
                flex-direction: column;
                gap: 0.75rem;
            }

            .submit-button, .cancel-button {
                width: 100%;
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}