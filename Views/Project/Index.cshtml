@model X.PagedList.IPagedList<ProjectManagementSystem.DBModels.Project>

@{
    ViewData["Title"] = "Project List";
    int count = (Model.PageNumber - 1) * Model.PageSize + 1;
    var total = Model.TotalItemCount;
    Layout = "_Layout";
    var primaryColor = "#8c5dd1";
    var lightPurple = "#e9e1f7";
    var darkPurple = "#6a3cb0";
}

@if (TempData["UploadSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" style="border-left: 4px solid #28a745;">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["UploadSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="container my-4" style="max-width: 1200px;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0" style="color: @primaryColor; font-weight: 600;">
            <i class="bi bi-folder2-open me-2"></i>My Project
        </h3>
        <span class="badge rounded-pill" style="background-color: @lightPurple; color: @darkPurple; font-size: 0.9rem;">
            <i class="bi bi-collection me-1"></i> Total: @total
        </span>
    </div>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a asp-action="Create" class="btn btn-primary shadow-sm" style="background-color: @primaryColor; border-color: @primaryColor;">
            <i class="bi bi-plus-lg me-2"></i> Create New Project
        </a>

        @*  <div class="input-group" style="max-width: 300px;">
            <input type="text" class="form-control" placeholder="Search projects..." aria-label="Search">
            <button class="btn btn-outline-secondary" type="button" style="border-color: @primaryColor; color: @primaryColor;">
                <i class="bi bi-search"></i>
            </button>
        </div> *@
    </div>

    @if (Model.Any())
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var project in Model)
            {
                <div class="col">
                    <div class="card shadow-sm h-100" style="border: 1px solid #e0e0e0; border-radius: 10px; overflow: hidden;">
                        <div class="card-header" style="background-color: @lightPurple; border-bottom: 2px solid @primaryColor;">
                            <h5 class="card-title mb-0" style="color: @primaryColor; font-weight: 600;">
                                <i class="bi bi-kanban me-2"></i>@project.ProjectName
                            </h5>
                        </div>

                        <div class="card-body">
                            <div class="mb-3">
                                <p class="card-text mb-1">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-person-badge me-1"></i>Supervisor:
                                    </span>
                                    @project.SupervisorName
                                </p>

                                <p class="card-text mb-1">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-tag me-1"></i>Type:
                                    </span>
                                    @project.ProjectTypePk?.TypeName
                                </p>

                                <p class="card-text mb-1">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-code-square me-1"></i>Tech:
                                    </span>
                                    @project.LanguagePk?.LanguageName / @project.FrameworkPk?.FrameworkName
                                </p>

                                <p class="card-text mb-1">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-building me-1"></i>Company:
                                    </span>
                                    @project.CompanyPk?.CompanyName
                                </p>
                            </div>

                            <div class="mb-3">
                                <p class="card-text mb-1">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-people me-1"></i>Team:
                                    </span>
                                </p>
                                <ul class="list-unstyled ps-3">
                                    @{
                                        var leader = project.ProjectMembers?
                                        .FirstOrDefault(m => m.Role == "Leader" && m.IsDeleted==false && m.StudentPk != null);

                                        if (leader != null)
                                        {
                                            <li>
                                                <span class="badge bg-primary me-1" style="background-color: @primaryColor;">Leader</span>
                                                @leader.StudentPk?.StudentName
                                            </li>
                                        }

                                        var members = project.ProjectMembers?
                                        .Where(m => m.Role == "Member" && m.IsDeleted==false && m.StudentPk != null)
                                        .ToList();

                                        if (members != null && members.Any())
                                        {
                                            foreach (var member in members)
                                            {
                                                <li>
                                                    <span class="badge bg-secondary me-1">Member</span>
                                                    @member.StudentPk?.StudentName
                                                </li>
                                            }
                                        }
                                    }
                                </ul>
                            </div>

                            <div class="mb-3">
                                <p class="card-text mb-2">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-calendar me-1"></i>Submitted:
                                    </span>
                                    @(project.ProjectSubmittedDate.HasValue
                                        ? project.ProjectSubmittedDate.Value.ToString("dd MMM yyyy")
                                        : "Not submitted")
                                </p>

                                <p class="card-text mb-2">
                                    <span style="color: @darkPurple; font-weight: 500;">
                                        <i class="bi bi-file-earmark me-1"></i>Files:
                                    </span>
                                    @if (project.ProjectFiles != null && project.ProjectFiles.Any())
                                    {
                                        <div class="mt-1">
                                            @foreach (var file in project.ProjectFiles)
                                            {
                                                <a href="@file.FilePath" target="_blank" class="d-block text-truncate" style="color: @primaryColor; text-decoration: none;">
                                                    <i class="bi bi-paperclip me-1"></i> @System.IO.Path.GetFileName(file.FilePath)
                                                </a>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted">No files</span>
                                    }
                                </p>
                            </div>

                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @{
                                        var statusClass = project.Status switch
                                        {
                                            "Pending" => "bg-warning text-dark",
                                            "Approved" => "bg-success",
                                            "Rejected" => "bg-danger",
                                            "Draft" => "bg-secondary",
                                            _ => "bg-info"
                                        };
                                    }
                                    <span class="badge @statusClass rounded-pill">
                                        <i class="bi @(project.Status == "Approved" ? "bi-check-circle" :
                                                     project.Status == "Rejected" ? "bi-x-circle" :
                                                     project.Status == "Pending" ? "bi-hourglass" : "bi-pencil") me-1"></i>
                                        @project.Status
                                    </span>
                                </div>

                                <div class="dropdown">
                                    <button class="btn btn-sm" type="button" id="dropdownMenuButton_@project.ProjectPkId"
                                            data-bs-toggle="dropdown" aria-expanded="false"
                                            style="color: @primaryColor; background-color: @lightPurple;">
                                        <i class="bi bi-three-dots-vertical"></i>
                                    </button>
                                    <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="dropdownMenuButton_@project.ProjectPkId">
                                        <li>
                                            <a class="dropdown-item" asp-action="Details" asp-route-id="@project.ProjectPkId">
                                                <i class="bi bi-info-circle me-2"></i>Details
                                            </a>
                                        </li>
                                       @*  <li>
                                            <a class="dropdown-item" asp-action="Edit" asp-route-id="@project.Project_pkId">
                                                <i class="bi bi-pencil me-2"></i>Edit
                                            </a>
                                        </li> *@
                                        @if (project.Status == "Draft")
                                        {
                                            @*  <li>
                                                <a class="dropdown-item" asp-action="Edit" asp-route-id="@project.Project_pkId">
                                                    <i class="bi bi-pencil me-2"></i>Edit
                                                </a>
                                            </li> *@
                                            <li>
                                                <form asp-action="Upload" method="post" onsubmit="return confirm('Are you sure you want to upload the project?');">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="Project_pkId" value="@project.ProjectPkId" />
                                                    <button type="submit" class="dropdown-item">
                                                        <i class="bi bi-upload me-2"></i>Upload
                                                    </button>
                                                </form>
                                            </li>
                                        }
                                        <li><hr class="dropdown-divider"></li>
                                        <li>
                                            <form asp-action="Delete" asp-route-id="@project.ProjectPkId" method="post"
                                                  onsubmit="return confirm('Are you sure you want to delete this project?');">
                                                <button type="submit" class="dropdown-item text-danger">
                                                    <i class="bi bi-trash me-2"></i>Delete
                                                </button>
                                            </form>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                count++;
            }
        </div>
    }
    else
    {
        <div class="text-center py-5" style="background-color: @lightPurple; border-radius: 10px;">
            <i class="bi bi-folder-x" style="font-size: 3rem; color: @primaryColor;"></i>
            <h4 class="mt-3" style="color: @primaryColor;">No Projects Found</h4>
            <p class="text-muted">Create your first project by clicking the button above</p>
            <a asp-action="Create" class="btn mt-2" style="background-color: @primaryColor; color: white;">
                <i class="bi bi-plus-lg me-2"></i> Create Project
            </a>
        </div>
    }
