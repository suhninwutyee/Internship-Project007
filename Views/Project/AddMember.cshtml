@model ProjectManagementSystem.DBModels.AddMemberViewModel

@{
    ViewData["Title"] = $"Add Member to {Model.ProjectName}";
    Layout = "_Layout";
}

<div>
    <partial name="_ProgressBarPartial" />
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <div class="card-header py-3" style="background-color: #8c5dd1;">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h4 mb-0 text-white">
                            <i class="fas fa-user-plus me-2"></i>Add Member to @Model.ProjectName
                        </h2>
                        <a asp-action="Dashboard" asp-controller="Student" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i>Back
                        </a>
                    </div>
                </div>

                <!-- Project Info Summary -->
                <div class="card-body py-3" style="background-color: #f8f9fa;">
                    <div class="d-flex flex-wrap align-items-center">
                        <div class="me-4 mb-2">
                            <span class="badge bg-purple-light text-purple fw-semibold">
                                <i class="fas fa-project-diagram me-1"></i> @Model.ProjectType?.TypeName
                            </span>
                        </div>
                        <div class="me-4 mb-2">
                            <span class="badge bg-purple-light text-purple fw-semibold">
                                <i class="fas fa-code me-1"></i> @Model.Language?.LanguageName
                            </span>
                        </div>
                        @if (Model.Framework != null)
                        {
                            <div class="me-4 mb-2">
                                <span class="badge bg-purple-light text-purple fw-semibold">
                                    <i class="fas fa-layer-group me-1"></i> @Model.Framework.FrameworkName
                                </span>
                            </div>
                        }
                    </div>
                </div>

                <div class="card-body p-4 p-md-5">
                    <form asp-action="AddMember" method="post" class="needs-validation" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProjectId" />

                        <div class="mb-4">
                            <label asp-for="RollNumber" class="form-label fw-semibold text-purple"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-id-card text-purple"></i>
                                </span>
                                <input asp-for="RollNumber" class="form-control form-control-lg"
                                       placeholder="Enter Roll Number" required />
                            </div>
                            <span asp-validation-for="RollNumber" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="EmailAddress" class="form-label fw-semibold text-purple"></label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-envelope text-purple"></i>
                                </span>
                                <input asp-for="EmailAddress" class="form-control form-control-lg"
                                       placeholder="Enter Email Address" required />
                            </div>
                            <span asp-validation-for="EmailAddress" class="text-danger small"></span>
                        </div>
                        <!-- ✅ Responsibility (RoleDescription) -->
                        <div class="mb-4">
                            <label asp-for="RoleDescription" class="form-label fw-semibold text-purple">Responsibility</label>
                            <div class="input-group">
                                <span class="input-group-text bg-light">
                                    <i class="fas fa-tasks text-purple"></i>
                                </span>
                                <input asp-for="RoleDescription" class="form-control form-control-lg" placeholder="eg.Frontend,Documentation,Research & Analysis.." />
                            </div>
                            <span asp-validation-for="RoleDescription" class="text-danger small"></span>
                        </div>


                        <div class="d-grid mt-5">
                            <button type="submit" class="btn btn-purple btn-lg py-3 fw-bold">
                                <i class="fas fa-user-plus me-2"></i>Add Team Member
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
}

<style>
    :root {
        --primary-purple: #8c5dd1;
        --purple-light: #f0e6ff;
        --purple-dark: #7a4cbf;
    }

    body {
        background: linear-gradient(135deg, #e4eefd);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }
    .text-purple {
        color: var(--primary-purple) !important;
    }

    .bg-purple-light {
        background-color: var(--purple-light) !important;
    }

    .btn-purple {
        background-color: var(--primary-purple);
        border-color: var(--primary-purple);
        color: white;
    }

        .btn-purple:hover {
            background-color: var(--purple-dark);
            border-color: var(--purple-dark);
        }
</style>