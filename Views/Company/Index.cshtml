@model List<ProjectManagementSystem.Models.CompanyViewModel>
@{
    ViewData["Title"] = "Companies";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="add-form">
    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()
        <input type="text" name="CompanyName" placeholder="New company name" required maxlength="100" />
        <button type="submit" class="btn btn-primary">Add Company</button>
    </form>
</div>

<table class="company-table">
    <thead>
        <tr>
            <th>Company Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="row-@item.Company_pkId">
                <td>
                    <span id="name-@item.Company_pkId">@item.CompanyName</span>
                    <div id="edit-form-@item.Company_pkId" style="display:none;">
                        <form asp-action="Edit" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="Company_pkId" value="@item.Company_pkId" />
                            <input type="text" name="CompanyName" value="@item.CompanyName" required maxlength="100" class="form-control d-inline" style="width:auto;" />
                            <button type="submit" class="btn btn-primary btn-sm">Save</button>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="hideEditForm(@item.Company_pkId)">Cancel</button>
                        </form>
                    </div>
                </td>
                <td>
                    <button id="edit-btn-@item.Company_pkId" class="btn btn-primary btn-sm" onclick="showEditForm(@item.Company_pkId)">Edit</button>
                    <form asp-action="Delete" method="post" style="display:inline;">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@item.Company_pkId" />
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this company?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        function showEditForm(id) {
            // Hide the name display
            document.getElementById('name-' + id).style.display = 'none';
            // Show the edit form
            document.getElementById('edit-form-' + id).style.display = 'block';
            // Hide the edit button
            document.getElementById('edit-btn-' + id).style.display = 'none';
        }

        function hideEditForm(id) {
            // Show the name display
            document.getElementById('name-' + id).style.display = 'inline';
            // Hide the edit form
            document.getElementById('edit-form-' + id).style.display = 'none';
            // Show the edit button
            document.getElementById('edit-btn-' + id).style.display = 'inline';
        }
    </script>
} 