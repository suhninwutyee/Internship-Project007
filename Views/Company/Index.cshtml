@model X.PagedList.IPagedList<ProjectManagementSystem.Models.Company>

@{
    ViewData["Title"] = "Company List";
    int count = (Model.PageNumber - 1) * Model.PageSize + 1;//
    var total = Model.TotalItemCount;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="mb-4">Company List</h3>

<div class="d-flex justify-content-between align-items-center mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Add Company</a>
    <span class="fw-semibold">Total Companies: @total</span>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th style="width:5%;">No</th>
            <th>Company Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Description</th>
            <th>State/Region</th>
            <th>Photo</th>
            <th style="width:20%;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@count</td>
                <td>@item.CompanyName</td>
                <td>@item.Address</td>
                <td>@item.Contact</td>
                <td>@item.Description</td>
                <td>@item.City?.CityName</td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFileName))
                    {
                        <img src="@Url.Content("~/images/companies/" + item.ImageFileName)" alt="Company Photo" style="height:50px; width:auto;" class="rounded" />
                    }
                    else
                    {
                        <span class="text-muted">No Photo</span>
                    }
                </td>
                <td>
                    <div class="d-flex flex-wrap gap-1">
                        <a asp-action="Edit" asp-route-id="@item.Company_pkId" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@item.Company_pkId" method="post" class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this company?');">
                            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-3">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
</div>

<style>
    ul.pagination {
        display: flex;
        flex-wrap: wrap;
        list-style-type: none;
        padding-left: 0;
        margin: 0;
    }

        ul.pagination li {
            margin: 3px;
        }

            ul.pagination li a,
            ul.pagination li span {
                display: block;
                padding: 0.375rem 0.75rem;
                color: #0d6efd;
                text-decoration: none;
                border: 1px solid #dee2e6;
                border-radius: 0.25rem;
            }

            ul.pagination li.active span {
                background-color: #0d6efd;
                color: white;
                border-color: #0d6efd;
            }

            ul.pagination li.disabled span {
                color: #6c757d;
            }
</style>
