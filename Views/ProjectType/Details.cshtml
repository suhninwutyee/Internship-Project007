@model ProjectType
@{
    ViewData["Title"] = "Details ProjectType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="detail-container">
    <!-- Decorative header with animated elements -->
    <div class="detail-header">
        <div class="header-decoration">
            <div class="deco-circle"></div>
            <div class="deco-line"></div>
        </div>
        <h2 class="detail-title">
            <span class="title-main">Project Type</span>
            <span class="title-sub">Details View</span>
        </h2>
        <div class="header-actions">
            <a asp-action="Index" class="back-button">
                <span class="button-icon">←</span>
                <span class="button-text">Back to List</span>
            </a>
        </div>
    </div>

    <!-- Main content card with elegant details -->
    <div class="detail-card">
        <div class="card-ornament"></div>

        <div class="detail-content">
            <div class="detail-field">
                <label class="field-label">Type ID</label>
                <div class="field-value">@Model.ProjectType_pkId</div>
            </div>

            <div class="detail-field highlight">
                <label class="field-label">Type Name</label>
                <div class="field-value">@Model.TypeName</div>
            </div>

            <div class="detail-field">
                <label class="field-label">Created Date</label>
                <div class="field-value">@DateTime.Now.ToString("MMMM dd, yyyy")</div>
            </div>

            
        </div>

        <div class="detail-footer">
            <a asp-action="Edit" asp-route-id="@Model.ProjectType_pkId" class="edit-button">
                <span class="button-icon">✎</span>
                <span class="button-text">Edit This Type</span>
            </a>
        </div>
    </div>

    <!-- Related items section (example) -->
    @* <div class="related-items">
        <h3 class="related-title">Related Projects</h3>
        <div class="related-list">
            <div class="related-item">Senior Thesis Projects (24)</div>
            <div class="related-item">Faculty Research (15)</div>
            <div class="related-item">Student Innovations (8)</div>
        </div>
    </div> *@
</div>

<style>
    /* Academic color palette */
    :root {
        --oxford-blue: #002147;
        --university-gold: #FFD700;
        --ivory: #FFFFF0;
        --slate-gray: #708090;
        --burgundy: #800020;
        --sage-green: #9DC183;
        --parchment: #F5E6CA;
    }

    body {
        font-family: 'Georgia', 'Times New Roman', serif;
        background-color: var(--parchment);
        color: var(--oxford-blue);
        margin: 0;
        padding: 20px;
        line-height: 1.6;
    }

    .detail-container {
        max-width: 800px;
        margin: 0 auto;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 8px 24px rgba(0, 33, 71, 0.08);
        overflow: hidden;
    }

    .detail-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 25px 30px;
        background: linear-gradient(135deg, var(--oxford-blue), #003366);
        color: white;
        position: relative;
        overflow: hidden;
    }

    .header-decoration {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
    }

    .deco-circle {
        position: absolute;
        top: -50px;
        right: -50px;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        border: 2px dashed rgba(255, 215, 0, 0.3);
    }

    .deco-line {
        position: absolute;
        bottom: 20px;
        left: 30px;
        width: 100px;
        height: 2px;
        background-color: var(--university-gold);
    }

    .detail-title {
        margin: 0;
        font-weight: 700;
        position: relative;
        z-index: 1;
    }

    .title-main {
        display: block;
        font-size: 1.8rem;
        letter-spacing: 1px;
    }

    .title-sub {
        display: block;
        font-size: 1rem;
        opacity: 0.8;
        font-weight: 400;
        margin-top: 5px;
    }

    .back-button {
        display: flex;
        align-items: center;
        padding: 10px 15px;
        background-color: rgba(255, 255, 255, 0.1);
        color: white;
        border-radius: 6px;
        text-decoration: none;
        transition: all 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
        font-size: 0.9rem;
    }

        .back-button:hover {
            background-color: rgba(255, 255, 255, 0.2);
            transform: translateX(-3px);
        }

    .button-icon {
        margin-right: 8px;
    }

    .detail-card {
        padding: 30px;
        position: relative;
        border-bottom: 1px solid rgba(112, 128, 144, 0.1);
    }

    .card-ornament {
        position: absolute;
        top: 0;
        right: 30px;
        width: 60px;
        height: 60px;
        background-image: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path fill="%23002147" opacity="0.05" d="M50,0 L100,50 L50,100 L0,50 Z"/></svg>');
    }

    .detail-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .detail-field {
        display: flex;
        margin-bottom: 20px;
        padding-bottom: 20px;
        border-bottom: 1px solid rgba(112, 128, 144, 0.1);
        align-items: baseline;
    }

        .detail-field.highlight {
            padding: 25px;
            background-color: rgba(255, 215, 0, 0.05);
            border-radius: 8px;
            border-left: 4px solid var(--university-gold);
            margin: 30px -25px;
        }

    .field-label {
        width: 150px;
        font-weight: 600;
        color: var(--slate-gray);
        font-size: 0.9rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .field-value {
        flex: 1;
        font-size: 1.1rem;
    }

    .highlight .field-value {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--oxford-blue);
    }

    .status-active {
        color: var(--sage-green);
        font-weight: 600;
    }

    .detail-footer {
        margin-top: 40px;
        text-align: center;
    }

    .edit-button {
        display: inline-flex;
        align-items: center;
        padding: 12px 25px;
        background-color: var(--university-gold);
        color: var(--oxford-blue);
        border-radius: 6px;
        text-decoration: none;
        font-weight: 600;
        transition: all 0.3s ease;
        box-shadow: 0 4px 8px rgba(0, 33, 71, 0.1);
    }

        .edit-button:hover {
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(0, 33, 71, 0.15);
            background-color: #ffea80;
        }

    .related-items {
        padding: 30px;
        background-color: rgba(0, 33, 71, 0.02);
        border-top: 1px solid rgba(112, 128, 144, 0.1);
    }

    .related-title {
        color: var(--oxford-blue);
        margin-top: 0;
        margin-bottom: 20px;
        font-size: 1.2rem;
        position: relative;
        display: inline-block;
    }

        .related-title::after {
            content: "";
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 40px;
            height: 2px;
            background-color: var(--burgundy);
        }

    .related-list {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 15px;
    }

    .related-item {
        padding: 15px;
        background-color: white;
        border-radius: 6px;
        box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        border-left: 3px solid var(--burgundy);
    }

        .related-item:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Animations */
    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .detail-card {
        animation: fadeIn 0.6s ease-out;
    }

    /* Responsive design */
    @@media (max-width: 768px) {
        .detail-header

    {
        flex-direction: column;
        align-items: flex-start;
        gap: 20px;
    }

    .detail-field {
        flex-direction: column;
        gap: 5px;
    }

    .field-label {
        width: auto;
    }

    .highlight .field-value {
        font-size: 1.3rem;
    }

    }

    @@media (max-width: 480px) {
        .detail-header

    {
        padding: 20px;
    }

    .detail-card {
        padding: 20px;
    }

    .back-button .button-text,
    .edit-button .button-text {
        display: none;
    }

    .back-button,
    .edit-button {
        padding: 10px 15px;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add subtle animation to the decorative elements
        const decoCircle = document.querySelector('.deco-circle');
        const decoLine = document.querySelector('.deco-line');

        setTimeout(() => {
            decoCircle.style.transform = 'rotate(180deg)';
            decoLine.style.width = '150px';
        }, 300);

        // Animate the highlight field
        const highlightField = document.querySelector('.highlight');
        setTimeout(() => {
            highlightField.style.transform = 'scale(1.02)';
            setTimeout(() => {
                highlightField.style.transform = 'scale(1)';
            }, 300);
        }, 500);
    });
</script>