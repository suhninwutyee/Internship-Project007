@{
    Layout = "_Layout" ;
}
<div class="project-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <h1 class="dashboard-title">📚 Project Types</h1>
        <p class="dashboard-subtitle">Academic Research Categories</p>
        <a asp-action="Create" class="add-button">+ Add New</a>
    </div>

    <!-- Project Cards -->
    <div class="project-types-container">
        @foreach (var item in Model)
        {
            <div class="project-type-card">
                <h3>@item.TypeName</h3>
                <div class="card-actions">
                    <a asp-action="Edit" asp-route-id="@item.ProjectType_pkId" class="action-button">✏️</a>
                    <a asp-action="Details" asp-route-id="@item.ProjectType_pkId" class="action-button">🔍</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    :root {
        --primary: #8C5DD1;
        --light: #E4EEFD;
        --neutral: #EFEFEF;
        --gray: #C8C6C1;
        --white: #FFFFFF;
    }

    body {
        background: linear-gradient(135deg, #e4eefd);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .project-dashboard {
        max-width: 800px;
        width: 100%;
        background: var(--white);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(140, 93, 209, 0.1);
        text-align: center;
    }

    .dashboard-header {
        margin-bottom: 30px;
    }

    .dashboard-title {
        color: var(--primary);
        font-size: 2.2rem;
        margin: 0 0 10px 0;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
    }

    .dashboard-subtitle {
        color: var(--gray);
        margin: 0 0 20px 0;
        font-size: 1rem;
    }

    .add-button {
        background: var(--primary);
        color: white;
        border: none;
        padding: 10px 20px;
        border-radius: 50px;
        font-weight: bold;
        text-decoration: none;
        transition: all 0.3s ease;
        display: inline-block;
    }

        .add-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(140, 93, 209, 0.3);
        }

    .project-types-container {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(240px, 1fr));
        gap: 20px;
    }

    .project-type-card {
        background: var(--light);
        border-radius: 15px;
        padding: 20px;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-align: left;
    }

        .project-type-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(140, 93, 209, 0.2);
        }

        .project-type-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: linear-gradient(to bottom, var(--primary), #A37FE2);
        }

        .project-type-card h3 {
            margin: 0 0 15px 0;
            color: var(--primary);
            font-size: 1.2rem;
        }

    .card-actions {
        display: flex;
        gap: 10px;
    }

    .action-button {
        width: 35px;
        height: 35px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0.8);
        color: var(--primary);
        text-decoration: none;
        transition: all 0.3s ease;
    }

        .action-button:hover {
            transform: scale(1.1);
            background: var(--white);
        }

    /* Animation for cards */
    @@foreach (var item in Model) {
        <text >
        .project-type-card[data-id="@@item.ProjectType_pkId"] {
            animation: fadeIn 0.5s ease @@(Model.IndexOf(item) * 0.1s forwards;
                opacity: 0;
                transform: translateY(10px);
        }

        </text>
    }

    @@keyframes fadeIn {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Responsive */
    @@media (max-width: 600px) {
        .project-types-container {
            grid-template-columns: 1fr;
        }

        .dashboard-title {
            font-size: 1.8rem;
        }

        .add-button {
            padding: 8px 16px;
            font-size: 0.9rem;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Add hover effect to cards
        const cards = document.querySelectorAll('.project-type-card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-5px)';
                card.style.boxShadow = '0 8px 20px rgba(140, 93, 209, 0.2)';
            });
            card.addEventListener('mouseleave', () => {
                card.style.transform = '';
                card.style.boxShadow = '';
            });
        });
    });
</script>