@{
    ViewData["Title"] = "Project Types";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <!-- Header -->
    <div class="text-center mb-4">
        <h1 class="fw-bold" style="color: #8C5DD1;">📚 Project Types</h1>
        <p class="text-muted">Academic Research Categories</p>
        <a asp-action="Create" class="btn btn-primary rounded-pill px-4 py-2" style="background-color: #8C5DD1;">+ Add New</a>
    </div>

    <!-- Project Type Cards -->
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-md-6 col-lg-4">
                <div class="card h-100 shadow-sm border-0 project-type-card" style="background-color: #E4EEFD; border-left: 5px solid #8C5DD1;">
                    <div class="card-body">
                        <h5 class="card-title fw-semibold text-primary" style="color: #8C5DD1;">@item.TypeName</h5>
                        <div class="d-flex gap-2 mt-3">
                            <a asp-action="Edit" asp-route-id="@item.ProjectType_pkId" class="btn btn-sm btn-light border rounded-circle text-primary" title="Edit">✏️</a>
                            <a asp-action="Details" asp-route-id="@item.ProjectType_pkId" class="btn btn-sm btn-light border rounded-circle text-primary" title="Details">🔍</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<style>
    :root {
        --primary: #8C5DD1;
        --light: #E4EEFD;
        --neutral: #EFEFEF;
        --gray: #C8C6C1;
        --white: #FFFFFF;
    }

    .project-type-card {
        transition: all 0.3s ease;
        position: relative;
    }

        .project-type-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 20px rgba(140, 93, 209, 0.2);
        }

        .project-type-card::before {
            content: "";
            position: absolute;
            top: 0;
            left: 0;
            width: 5px;
            height: 100%;
            background: linear-gradient(to bottom, var(--primary), #A37FE2);
        }

    .btn-light.text-primary:hover {
        background-color: #ffffff !important;
        transform: scale(1.05);
    }

    @@keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .card {
        animation: fadeInUp 0.5s ease;
    }

   @@media (max-width: 576px) {
        h1

    {
        font-size: 1.8rem;
    }

    .btn {
        font-size: 0.9rem;
        padding: 8px 16px;
    }

    }
</style>
