@model ProjectType

@{
    ViewData["Title"] = "Create Project Type";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container py-5">
    <!-- Form Header -->
    <div class="text-center mb-4">
        <div class="form-icon mb-2">📝</div>
        <h2 class="fw-bold" style="color: #8C5DD1;">Create New Project Type</h2>
        <p class="text-muted">Define a new academic category</p>
    </div>

    <!-- Form -->
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0 rounded-4 p-4">
                <form asp-action="Create">
                    <div class="mb-3">
                        <label asp-for="TypeName" class="form-label text-primary fw-semibold">Type Name</label>
                        <input asp-for="TypeName" class="form-control form-control-lg" placeholder="e.g. Graduate Thesis, Faculty Research" />
                        <span asp-validation-for="TypeName" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="d-flex gap-3 mt-4 flex-wrap">
                        <button type="submit" class="btn btn-lg text-white flex-fill" style="background-color: #8C5DD1;">
                            ✨ Create
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary btn-lg flex-fill">
                            ← Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<style>
    .form-icon {
        font-size: 2.5rem;
        animation: bounce 2s infinite;
        color: #8C5DD1;
    }

    @@keyframes bounce {
        0%, 100%

    {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-8px);
    }

    }

    .form-control:focus {
        border-color: #8C5DD1;
        box-shadow: 0 0 0 0.2rem rgba(140, 93, 209, 0.25);
    }

    @@media (max-width: 576px) {
        .btn-lg

    {
        font-size: 1rem;
        padding: 0.75rem 1rem;
    }

    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
