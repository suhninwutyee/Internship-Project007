        top: -0.5rem;
        left: 0.8rem;
        font-size: 0.8rem;
        color: var(--primary-color);
    }

    .floating-control i {
        position: absolute;
        right: 1rem;
        top: 1rem;
        color: #999;
        pointer-events: none;
    }

    /* Member selection */
    .member-selection {
        border: 1px solid #eee;
        border-radius: 8px;
        overflow: hidden;
    }

    .member-instructions {
        padding: 0.75rem 1rem;
        background: #f9f9f9;
        border-bottom: 1px solid #eee;
        font-size: 0.9rem;
        color: #666;
    }

    .member-list-container {
        max-height: 300px;
        overflow-y: auto;
        padding: 0.5rem;
    }

    .member-option {
        margin-bottom: 0.5rem;
    }

        .member-option input[type="checkbox"] {
            display: none;
        }

        .member-option label {
            display: flex;
            align-items: center;
            padding: 0.75rem 1rem;
            border-radius: 6px;
            cursor: pointer;
            transition: all 0.2s;
        }

            .member-option label:hover {
                background: var(--primary-light);
            }

        .member-option input[type="checkbox"]:checked + label {
            background: var(--primary-color);
            color: white;
        }

    .member-avatar {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        background: #eee;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-right: 1rem;
        color: #666;
    }

    .member-option input[type="checkbox"]:checked + label .member-avatar {
        background: rgba(255,255,255,0.2);
        color: white;
    }

    .member-info {
        display: flex;
        flex-direction: column;
    }

    .member-name {
        font-weight: 500;
    }

    .member-email {
        font-size: 0.8rem;
        opacity: 0.8;
    }

    .member-option input[type="checkbox"]:checked + label .member-email {
        opacity: 0.9;
    }

    /* Submit button */
    .submit-button {
        background: var(--primary-color);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        font-size: 1rem;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .submit-button:hover {
            background: #7a4fb8;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(140, 93, 209, 0.3);
        }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .form-container

    {
        margin: 1rem;
        border-radius: 8px;
    }

    .submission-form {
        padding: 0 1rem 1rem;
    }

    }
</style>