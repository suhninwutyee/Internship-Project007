@{
    ViewData["Title"] = "Create Project Submission";
    var students = ViewBag.Students as List<ProjectManagementSystem.Models.Student>;
    var projects = ViewBag.Projects as List<ProjectManagementSystem.Models.Project>;
}
<div>
    <partial name="_ProgressBarPartial" />
</div>
<body>
<div class="form-container">
    <div class="form-header">
        <h2><i class="fas fa-plus-circle"></i> Create New Submission</h2>
        <p class="text-muted">Fill in the details to register a new project submission</p>
    </div>

    <form asp-action="Create" method="post" class="submission-form">
        <div class="form-section">
            <div class="section-header">
                <i class="fas fa-project-diagram"></i>
                <h3>Project Information</h3>
            </div>

            <div class="floating-control">
                <select class="floating-select" id="projectId" name="projectId" required>
                    <option value="" disabled selected></option>
                    @foreach (var project in projects)
                    {
                        <option value="@project.Project_pkId">@project.ProjectName</option>
                    }
                </select>
                <label for="projectId">Select Project</label>
                <i class="fas fa-chevron-down"></i>
            </div>
        </div>

        <div class="form-section">
            <div class="section-header">
                <i class="fas fa-users"></i>
                <h3>Team Members</h3>
            </div>

            <div class="member-selection">
                <div class="member-instructions">
                    <p>Select team members (select multiple with Ctrl/Cmd+Click)</p>
                </div>
                <div class="member-list-container">
                    @foreach (var student in students)
                    {
                        <div class="member-option">
                            <input type="checkbox" id="student-@student.Student_pkId"
                                   name="selectedStudentIds" value="@student.Student_pkId">
                            <label for="student-@student.Student_pkId">
                                <div class="member-avatar">
                                    <i class="fas fa-user"></i>
                                </div>
                                <div class="member-info">
                                    <span class="member-name">@student.StudentName</span>
                                    <span class="member-email">@student.Email</span>
                                </div>
                            </label>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="submit-button">
                <i class="fas fa-paper-plane"></i> Submit Project
            </button>
        </div>
    </form>
</div>
</body>
<style>
    :root {
        --primary-color: #8c5dd1;
        --primary-light: rgba(140, 93, 209, 0.1);
    }

    body {
        background: linear-gradient(135deg, #e4eefd);
        min-height: 100vh;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .form-container {
        max-width: 800px;
        margin: 2rem auto;
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        overflow: hidden;
    }

    .form-header {
