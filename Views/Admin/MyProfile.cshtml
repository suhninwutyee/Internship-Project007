@using ProjectManagementSystem.DBModels
@model MyProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    /* ——— GLOBAL ——— */
    body {
        background: #f2f5f9;
    }

    /* ——— PROFILE WRAPPER ——— */
    .profile-wrapper {
        max-width: 950px;
        margin: auto;
        margin-top: 40px;
    }

    /* ——— HEADER ——— */
    .profile-header {
        background: linear-gradient(135deg, #8c5dd1, #8c5dd1);
        padding: 50px 30px;
        border-radius: 22px;
        color: white;
        text-align: center;
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        position: relative;
        overflow: hidden;
    }

        .profile-header::after {
            content: "";
            position: absolute;
            width: 200px;
            height: 200px;
            background: rgba(255,255,255,0.15);
            border-radius: 50%;
            top: -40px;
            right: -40px;
        }

    .profile-avatar {
        width: 110px;
        height: 110px;
        border-radius: 50%;
        background: white;
        color: #8c5dd1;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 45px;
        font-weight: 700;
        margin: auto;
        box-shadow: 0 5px 15px rgba(255,255,255,0.3);
    }

    /* ——— CARD STYLING ——— */
    .profile-card {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(12px);
        border-radius: 18px;
        padding: 30px;
        margin-top: -30px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.1);
    }

    h5.section-title {
        font-weight: 700;
        color: #8c5dd1;
        margin-bottom: 20px;
        letter-spacing: .5px;
    }

    .form-control {
        border-radius: 12px;
        padding: 12px 15px;
        border: 1px solid #dbe1ea;
    }

        .form-control:focus {
            box-shadow: 0 0 5px rgba(76,110,245,0.3);
            border-color: #8c5dd1;
        }

    .input-group-text {
        border-radius: 12px;
        background: #eef2fb;
        border: none;
    }

    /* ——— BUTTONS ——— */
    .btn-modern {
        border-radius: 10px;
        padding: 10px 20px;
        letter-spacing: .5px;
        font-weight: 600;
    }

    .btn-save {
        background: #8c5dd1;
        color: white;
    }

        .btn-save:hover {
            background: #8c5dd1;
        }

    .btn-cancel {
        background: #e9ecef;
        color: #495057;
    }

    .btn-edit {
        background: #8c5dd1;
        color: white;
    }

        .btn-edit:hover {
            background: #8c5dd1;
        }
</style>

<div class="profile-wrapper">

    <!-- HEADER -->
    <div class="profile-header">
        <div class="profile-avatar">
            @Model.FullName?[0]
        </div>
        <h2 class="mt-3 fw-bold">@Model.FullName</h2>
        <p class="mb-1">@Model.Email</p>
        <span class="badge bg-light text-dark px-3 py-2 mt-2" style="font-size: 0.9rem;">Teacher Account</span>
    </div>

    <!-- CONTENT CARD -->
    <div class="profile-card">

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
        }

        <form method="post" asp-action="MyProfile">

            <!-- PERSONAL INFO -->
            <h5 class="section-title">Personal Information</h5>
            <div class="row g-3 mb-4">
                <div class="col-md-6">
                    <label class="form-label">Full Name</label>
                    <div class="input-group">
                        <input asp-for="FullName" class="form-control" />
                        <span class="input-group-text">
                            <i class="fa fa-user-pen"></i>
                        </span>
                    </div>
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
            </div>

            <!-- PASSWORD SECTION -->
            @if (Model.IsEditMode)
            {
                <h5 class="section-title">Change Password</h5>
                <div class="row g-3 mb-4">
                    <div class="col-md-4">
                        <label class="form-label">Current Password</label>
                        <input name="OldPassword" type="password" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">New Password</label>
                        <input name="NewPassword" type="password" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label class="form-label">Confirm Password</label>
                        <input name="ConfirmNewPassword" type="password" class="form-control" />
                    </div>
                </div>
            }

            <!-- ACTION BUTTONS -->
            <div class="d-flex justify-content-end gap-2 mt-3">
                @if (Model.IsEditMode)
                {
                    <button type="submit" class="btn btn-modern btn-save">
                        <i class="fa fa-save"></i> Save Changes
                    </button>

                    <a asp-action="MyProfile" class="btn btn-modern btn-cancel">
                        Cancel
                    </a>
                }
                else
                {
                    <a asp-action="MyProfile" asp-route-isEditMode="true" class="btn btn-modern btn-edit">
                        <i class="fa fa-pen"></i> Edit Profile
                    </a>
                }
            </div>

        </form>
    </div>
</div>
