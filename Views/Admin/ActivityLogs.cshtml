@using ProjectManagementSystem.DBModels
@model IEnumerable<AdminActivityLog>

@{
    Layout = "~/Views/Shared/_TeacherLayout.cshtml";
}
<div class="activity-log-container">
    <div class="log-header">
        <h3><i class="fas fa-history"></i> Activity History</h3>
        <div class="log-actions">
            <button class="btn btn-refresh" id="refreshLogs">
                <i class="fas fa-sync-alt"></i> Refresh
            </button>
        </div>
    </div>

    <div class="table-responsive">
        <table class="log-table">
            <thead>
                <tr>
                    <th>Timestamp</th>
                    <th>User</th>
                    <th>Description</th>
                    <th>IP Address</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model.OrderByDescending(x => x.Timestamp))
                {
                    <tr class="log-entry">
                        <td class="timestamp">
                            @log.Timestamp?.ToString("MMM dd, yyyy h:mm tt")
                        </td>
                        <td class="user">
                            <div class="user-avatar">@log.LoggedName?.FirstOrDefault()</div>
                            <span>@log.LoggedName</span>
                        </td>
                        <td class="description">
                            @log.Action
                        </td>
                        <td class="ip-address">
                            @log.IpAddress
                            <button class="btn btn-sm lookup-btn" data-ip="@log.IpAddress">
                                <i class="fas fa-search"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="log-footer">
        Showing @Model.Count() most recent activities
    </div>
</div>

@section Styles {
    <style>
        :root {
            --wine-red: #8C5DD1;
            --light-wine: ##7a4bc2;
            --snow-white: #fff;
            --soft-gray: #f8f9fa;
        }

        .activity-log-container {
            background: var(--snow-white);
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.05);
            overflow: hidden;
            margin-bottom: 2rem;
        }

        .log-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 1.5rem;
            background: var(--wine-red);
            color: white;
        }

            .log-header h3 {
                margin: 0;
                font-weight: 500;
                font-size: 1.25rem;
            }

        .btn-refresh {
            background: transparent;
            border: 1px solid rgba(255,255,255,0.3);
            color: white;
            padding: 0.35rem 0.75rem;
            border-radius: 4px;
            transition: all 0.2s ease;
        }

            .btn-refresh:hover {
                background: rgba(255,255,255,0.1);
            }

        .log-table {
            width: 100%;
            border-collapse: collapse;
            font-size: 0.9rem;
        }

            .log-table th {
                background: var(--soft-gray);
                color: #555;
                padding: 0.75rem 1rem;
                text-align: left;
                font-weight: 500;
                border-bottom: 1px solid #eee;
            }

        .log-entry {
            border-bottom: 1px solid #f0f0f0;
        }

            .log-entry:hover {
                background: rgba(114, 47, 55, 0.02);
            }

        .log-table td {
            padding: 0.75rem 1rem;
            vertical-align: middle;
        }

        .timestamp {
            color: #555;
            white-space: nowrap;
        }

        .user {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .user-avatar {
            width: 32px;
            height: 32px;
            border-radius: 50%;
            background: var(--wine-red);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 0.8rem;
        }

        .description {
            color: #444;
            max-width: 300px;
        }

        .ip-address {
            display: flex;
            align-items: center;
            gap: 8px;
            font-family: monospace;
            color: #666;
        }

        .lookup-btn {
            padding: 0.2rem;
            background: transparent;
            border: none;
            color: var(--wine-red);
            opacity: 0.7;
            transition: opacity 0.2s;
        }

            .lookup-btn:hover {
                opacity: 1;
            }

        .log-footer {
            padding: 0.75rem 1.5rem;
            background: var(--soft-gray);
            color: #666;
            font-size: 0.85rem;
            text-align: right;
        }
    </style>
}

@section Scripts {
    <script>
        $(document).ready(function() {
            // Simple refresh
            $('#refreshLogs').click(function() {
                location.reload();
            });

            // IP lookup
            $('.lookup-btn').click(function() {
                const ip = $(this).data('ip');
                window.open(`https://whatismyipaddress.com/ip/${ip}`, '_blank');
            });
        });
    </script>
}